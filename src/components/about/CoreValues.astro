---
import { astroConfig, render } from 'astro/runtime/server';
import { experimental_AstroContainer } from 'astro/runtime/server/experimental';
import type { AstroComponent } from 'astro/astro';

// ULTRACTION Core Values Section - Enhanced Design
// Brand Colors: Primary #2c1810 (dark brown), Accent #985a3d (terracotta), Background #e8dcc8 (beige)

interface CoreValue {
  id: string;
  title: string;
  description: string;
  icon: string;
}

const coreValues: CoreValue[] = [
  {
    id: 'integrity',
    title: 'Integrity',
    description: 'Unwavering honesty and transparency in every interaction and commitment',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3 8 3v7c0 6-8 10-8 10z"/><path d="M12 12v8"/><path d="M8 10l4-2 4 2"/><path d="M12 22c-2-2-4-4-4-8"/></svg>`
  },
  {
    id: 'team-spirit',
    title: 'Team Spirit',
    description: 'Collaborative excellence driven by shared purpose and mutual respect',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="8" r="2.5"/><path d="M12 12c-3.333 0-5 1.667-5 5v1h10v-1c0-3.333-1.667-5-5-5z"/><path d="M6 12c-3.333 0-5 1.667-5 5v1h10v-1c0-3.333-1.667-5-5-5z" opacity="0.4"/></svg>`
  },
  {
    id: 'commitment',
    title: 'Commitment',
    description: 'Dedicated to delivering excellence from foundation to final handover',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/></svg>`
  },
  {
    id: 'sustainability',
    title: 'Sustainability',
    description: 'Building responsibly for communities and the environment',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2v4"/><path d="M12 18v4"/><path d="M4.93 4.93l2.83 2.83"/><path d="M16.24 16.24l2.83 2.83"/><path d="M2 12h4"/><path d="M18 12h4"/><path d="M4.93 19.07l2.83-2.83"/><path d="M16.24 7.76l2.83-2.83"/><circle cx="12" cy="12" r="4"/></svg>`
  },
  {
    id: 'performance',
    title: 'Performance',
    description: 'Exceeding expectations through precision engineering and execution',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" opacity="0.3" transform="translate(2, 2)"/></svg>`
  },
  {
    id: 'safety',
    title: 'Safety',
    description: 'Uncompromising standards protecting our people and communities',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3 8 3v7c0 6-8 10-8 10z"/><path d="M9 12l2 2 4-4"/></svg>`
  }
];
---

<!-- ULTRACTION Core Values Section -->
<section class="ultra-core-values">
  <div class="ucv-header">
    <span class="ucv-eyebrow">Our Foundation</span>
    <h2 class="ucv-title">Core Values</h2>
    <div class="ucv-underline"></div>
  </div>

  <div class="ucv-grid">
    {coreValues.map((value, index) => (
      <div class="ucv-card" data-value={value.id} style={`--delay: ${index * 100}ms`}>
        <button class="ucv-card-toggle" type="button" aria-label={`Toggle ${value.title} details`} aria-expanded="false">
          <div class="ucv-card-flip">
            <div class="ucv-card-face ucv-card-front">
              <div class="ucv-logo-watermark" aria-hidden="true">
                <img src="/logo/logo-temp.png" alt="" loading="lazy" />
              </div>

              <div class="ucv-card-shell">
                <header class="ucv-face-header">
                  <span>ULTRACTION</span>
                  <span>Core Value</span>
                </header>

                <div class="ucv-face-content">
                  <div class="ucv-number">{'0' + (index + 1)}</div>
                  <div class="ucv-icon-wrapper">
                    <div class="ucv-icon" set:html={value.icon}></div>
                  </div>
                  <h3 class="ucv-card-title">{value.title}</h3>
                </div>

                <footer class="ucv-face-footer">
                  <div class="ucv-card-line"></div>
                  <p class="ucv-card-hint">Tap to reveal</p>
                </footer>
              </div>
            </div>

            <div class="ucv-card-face ucv-card-back">
              <div class="ucv-card-shell">
                <header class="ucv-face-header">
                  <span>ULTRACTION</span>
                  <span>Value Insight</span>
                </header>

                <div class="ucv-face-content">
                  <div class="ucv-number">{'0' + (index + 1)}</div>
                  <h3 class="ucv-card-title">{value.title}</h3>
                  <p class="ucv-card-desc">{value.description}</p>
                </div>

                <footer class="ucv-face-footer">
                  <div class="ucv-card-line"></div>
                  <p class="ucv-card-hint">Tap to return</p>
                </footer>
              </div>
            </div>
          </div>
        </button>
      </div>
    ))}
  </div>
</section>

<style>
  /* ULTRACTION Core Values - Enhanced Design */
  .ultra-core-values {
    --ucv-primary: #2c1810;
    --ucv-accent: #985a3d;
    --ucv-bg: #e8dcc8;
    --ucv-card-bg: #f5efe6;
    --ucv-text: #2c1810;
    --ucv-text-light: #6b5d52;

    padding: 6rem 2rem;
    background: linear-gradient(180deg, var(--ucv-bg) 0%, #ede4d4 100%);
    position: relative;
    overflow: hidden;
  }

  /* Subtle texture overlay */
  .ultra-core-values::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
    pointer-events: none;
    opacity: 0.5;
  }

  .ucv-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  .ucv-eyebrow {
    display: inline-block;
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--ucv-accent);
    margin-bottom: 1rem;
    position: relative;
  }

  .ucv-eyebrow::after {
    content: '';
    position: absolute;
    left: -20px;
    right: -20px;
    bottom: -8px;
    height: 1px;
    background: var(--ucv-accent);
    opacity: 0.3;
  }

  .ucv-title {
    font-family: 'Public Sans', system-ui, sans-serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 300;
    font-style: italic;
    color: var(--ucv-primary);
    margin: 0;
    letter-spacing: -0.02em;
  }

  .ucv-title span {
    font-weight: 600;
    font-style: normal;
  }

  .ucv-underline {
    width: 60px;
    height: 3px;
    background: var(--ucv-accent);
    margin: 1.5rem auto 0;
  }

  .ucv-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  @media (min-width: 640px) {
    .ucv-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .ucv-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  .ucv-card {
    position: relative;
    aspect-ratio: 4 / 5;
    perspective: 1200px;
  }

  .ucv-card-toggle {
    width: 100%;
    height: 100%;
    border: 0;
    background: transparent;
    padding: 0;
    margin: 0;
    cursor: pointer;
    text-align: left;
    display: block;
    transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .ucv-card:hover .ucv-card-toggle {
    transform: translateY(-4px);
  }

  .ucv-card-toggle:focus-visible {
    outline: 2px solid var(--ucv-accent);
    outline-offset: 4px;
  }

  .ucv-card-flip {
    position: relative;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transition: transform 0.65s cubic-bezier(0.2, 0.7, 0.2, 1);
  }

  .ucv-card.is-flipped .ucv-card-flip {
    transform: rotateY(180deg);
  }

  .ucv-card-face {
    position: absolute;
    inset: 0;
    backface-visibility: hidden;
    height: 100%;
    padding: 0;
    background: rgba(245, 239, 230, 0.8);
    border: 1px solid rgba(44, 24, 16, 0.1);
    transition: box-shadow 0.4s ease, background 0.4s ease;
  }

  .ucv-card-front {
    position: relative;
    overflow: hidden;
  }

  .ucv-card-back {
    transform: rotateY(180deg);
    background: rgba(255, 255, 255, 0.95);
  }

  .ucv-card-shell {
    height: 100%;
    display: grid;
    grid-template-rows: auto 1fr auto;
    position: relative;
    z-index: 2;
  }

  .ucv-face-header,
  .ucv-face-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    padding: 0.8rem 1.15rem;
    text-transform: uppercase;
    letter-spacing: 0.16em;
    font-size: 0.58rem;
    color: rgba(44, 24, 16, 0.78);
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.38), rgba(255, 255, 255, 0.12));
    border-bottom: 1px solid rgba(44, 24, 16, 0.08);
  }

  .ucv-face-footer {
    border-top: 1px solid rgba(44, 24, 16, 0.08);
    border-bottom: 0;
    justify-content: flex-start;
    gap: 0.7rem;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.22), rgba(255, 255, 255, 0.06));
  }

  .ucv-face-content {
    padding: 1.6rem 1.35rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .ucv-card:hover .ucv-card-front,
  .ucv-card.is-flipped .ucv-card-back {
    background: rgba(255, 255, 255, 0.95);
    box-shadow: 0 20px 40px rgba(44, 24, 16, 0.15);
  }

  .ucv-logo-watermark {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    z-index: 1;
  }

  .ucv-logo-watermark img {
    width: min(78%, 230px);
    max-width: 100%;
    opacity: 0.09;
    filter: grayscale(1) contrast(1.15);
    mix-blend-mode: multiply;
    user-select: none;
    -webkit-user-drag: none;
  }

  .ucv-number,
  .ucv-icon-wrapper,
  .ucv-card-title,
  .ucv-card-desc,
  .ucv-card-line,
  .ucv-card-hint {
    position: relative;
    z-index: 1;
  }

  .ucv-number {
    font-family: 'Public Sans', system-ui, sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--ucv-accent);
    margin-bottom: 1rem;
    opacity: 0.6;
  }

  .ucv-icon-wrapper {
    width: 56px;
    height: 56px;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .ucv-icon {
    width: 100%;
    height: 100%;
    color: var(--ucv-primary);
    transition: all 0.3s ease;
  }

  .ucv-icon :global(svg) {
    display: block;
    width: 100%;
    height: 100%;
  }

  .ucv-card:hover .ucv-icon {
    color: var(--ucv-accent);
    transform: scale(1.1);
  }

  .ucv-icon-wrapper::before {
    content: '';
    position: absolute;
    inset: -4px;
    border: 1px solid var(--ucv-accent);
    opacity: 0;
    transition: all 0.3s ease;
  }

  .ucv-card:hover .ucv-icon-wrapper::before {
    inset: 0;
    opacity: 0.3;
  }

  .ucv-card-title {
    font-family: 'Public Sans', system-ui, sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--ucv-primary);
    margin: 0 0 1rem 0;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }

  .ucv-card-desc {
    font-size: 0.8rem;
    line-height: 1.6;
    color: var(--ucv-text-light);
    margin: 0;
    max-width: 26ch;
  }

  .ucv-card-line {
    width: 20px;
    height: 2px;
    background: var(--ucv-accent);
    margin-top: 0;
    transition: width 0.3s ease;
    flex: 0 0 auto;
  }

  .ucv-card:hover .ucv-card-line {
    width: 100%;
  }

  .ucv-card-hint {
    margin: 0;
    font-size: 0.56rem;
    letter-spacing: 0.17em;
    text-transform: uppercase;
    color: var(--ucv-accent);
    opacity: 0.8;
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .ultra-core-values {
      --ucv-primary: #e8dcc8;
      --ucv-accent: #c9a87e;
      --ucv-bg: #1a1209;
      --ucv-card-bg: #241a10;
      --ucv-text: #e8dcc8;
      --ucv-text-light: #a89888;
    }

    .ucv-card-face {
      background: rgba(36, 26, 16, 0.8);
      border-color: rgba(232, 220, 200, 0.1);
    }

    .ucv-card:hover .ucv-card-front,
    .ucv-card.is-flipped .ucv-card-back {
      background: rgba(44, 24, 16, 0.95);
    }

    .ucv-card-back {
      background: rgba(44, 24, 16, 0.95);
    }

    .ucv-logo-watermark img {
      opacity: 0.14;
      mix-blend-mode: screen;
    }

    .ucv-face-header,
    .ucv-face-footer {
      color: rgba(232, 220, 200, 0.8);
      border-color: rgba(232, 220, 200, 0.1);
      background: linear-gradient(90deg, rgba(26, 18, 9, 0.56), rgba(26, 18, 9, 0.18));
    }
  }

  /* Animation on load */
  @keyframes ucvFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .ucv-card {
    animation: ucvFadeIn 0.6s ease-out forwards;
    animation-delay: var(--delay, 0ms);
    opacity: 0;
  }
</style>

<script>
  const cards = document.querySelectorAll('.ucv-card');

  cards.forEach((card) => {
    const button = card.querySelector('.ucv-card-toggle');
    if (!(button instanceof HTMLButtonElement)) return;

    button.addEventListener('click', () => {
      const flipped = card.classList.toggle('is-flipped');
      button.setAttribute('aria-expanded', String(flipped));
    });
  });
</script>
