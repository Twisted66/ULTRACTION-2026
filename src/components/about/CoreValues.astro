---
// ULTRACTION Core Values Section - Enhanced Design
// Uses design tokens from global.css

interface CoreValue {
  id: string;
  title: string;
  description: string;
  insight: string;
  icon: string;
  image: string;
}

const coreValues: CoreValue[] = [
  {
    id: 'integrity',
    title: 'Integrity',
    description: 'Unwavering honesty and transparency in every interaction and commitment',
    insight: 'We communicate clearly, honor commitments, and take ownership from planning to handover.',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3 8 3v7c0 6-8 10-8 10z"/><path d="M12 12v8"/><path d="M8 10l4-2 4 2"/><path d="M12 22c-2-2-4-4-4-8"/></svg>`,
    image: '/images/core-values/integrity.svg'
  },
  {
    id: 'team-spirit',
    title: 'Team Spirit',
    description: 'Collaborative excellence driven by shared purpose and mutual respect',
    insight: 'Engineers, supervisors, and site teams align early so execution stays coordinated and efficient.',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="8" r="2.5"/><path d="M12 12c-3.333 0-5 1.667-5 5v1h10v-1c0-3.333-1.667-5-5-5z"/><path d="M6 12c-3.333 0-5 1.667-5 5v1h10v-1c0-3.333-1.667-5-5-5z" opacity="0.4"/></svg>`,
    image: '/images/core-values/team-spirit.svg'
  },
  {
    id: 'commitment',
    title: 'Commitment',
    description: 'Dedicated to delivering excellence from foundation to final handover',
    insight: 'We stay accountable to schedule, quality, and client outcomes across every project milestone.',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/></svg>`,
    image: '/images/core-values/commitment.svg'
  },
  {
    id: 'sustainability',
    title: 'Sustainability',
    description: 'Building responsibly for communities and the environment',
    insight: 'Our choices prioritize durable systems, reduced waste, and long-term value for the built environment.',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2v4"/><path d="M12 18v4"/><path d="M4.93 4.93l2.83 2.83"/><path d="M16.24 16.24l2.83 2.83"/><path d="M2 12h4"/><path d="M18 12h4"/><path d="M4.93 19.07l2.83-2.83"/><path d="M16.24 7.76l2.83-2.83"/><circle cx="12" cy="12" r="4"/></svg>`,
    image: '/images/core-values/sustainability.svg'
  },
  {
    id: 'performance',
    title: 'Performance',
    description: 'Exceeding expectations through precision engineering and execution',
    insight: 'We track progress and quality continuously to deliver predictable results under real site constraints.',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" opacity="0.3" transform="translate(2, 2)"/></svg>`,
    image: '/images/core-values/performance.svg'
  },
  {
    id: 'safety',
    title: 'Safety',
    description: 'Uncompromising standards protecting our people and communities',
    insight: 'Risk planning, safe methods, and disciplined site behavior protect teams and project continuity.',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3 8 3v7c0 6-8 10-8 10z"/><path d="M9 12l2 2 4-4"/></svg>`,
    image: '/images/core-values/safety.svg'
  }
];
---

<!-- ULTRACTION Core Values Section -->
<section class="ultra-core-values relative bg-surface text-primary overflow-hidden border-y border-primary/20">
  {/* Background pattern */}
  <div class="absolute inset-0 pointer-events-none">
    {/* Grid pattern overlay */}
    <div
      class="absolute inset-0 opacity-[0.03]"
      style={{
        backgroundImage: `
          linear-gradient(to right, currentColor 1px, transparent 1px),
          linear-gradient(to bottom, currentColor 1px, transparent 1px)
        `,
        backgroundSize: '60px 60px'
      }}
    ></div>

    {/* Animated gradient accent */}
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-accent/5 rounded-full blur-3xl animate-pulse-slow"></div>

    {/* Secondary gradient orb */}
    <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-primary/5 rounded-full blur-3xl animate-pulse-slower"></div>
  </div>

  {/* Content wrapper with relative positioning for z-index */}
  <div class="relative z-10">
    <div class="ucv-header">
      <h2 class="ucv-title">Core Values</h2>
      <div class="ucv-underline"></div>
    </div>

  <div class="ucv-grid">
    {coreValues.map((value, index) => (
      <div class="ucv-card" data-value={value.id} style={`--delay: ${index * 100}ms`}>
        <button
          class="ucv-card-toggle"
          type="button"
          aria-label={`${value.title}: ${value.description}. Click to toggle details.`}
          aria-expanded="false"
        >
          <span class="sr-only">Core Value: {value.title}</span>
          <div class="ucv-card-flip">
            <div class="ucv-card-face ucv-card-front">
              <div class="ucv-front-visual" aria-hidden="true">
                <img src={value.image} alt={`${value.title} core value illustration`} loading="lazy" />
              </div>

              <div class="ucv-card-shell">
                <header class="ucv-face-header">
                  <span>ULTRACTION</span>
                  <span>Core Value</span>
                </header>

                <div class="ucv-face-content"></div>

                <footer class="ucv-face-footer">
                  <div class="ucv-card-line"></div>
                </footer>
              </div>
            </div>

            <div class="ucv-card-face ucv-card-back">
              <div class="ucv-logo-watermark" aria-hidden="true">
                <img src="/logo/UGC-LOGO-HQ.png" alt="ULTRACTION logo watermark" loading="lazy" />
              </div>

              <div class="ucv-card-shell">
                <header class="ucv-face-header">
                  <span>ULTRACTION</span>
                  <span>Value Insight</span>
                </header>

                <div class="ucv-face-content">
                  <div class="ucv-number">{'0' + (index + 1)}</div>
                  <h3 class="ucv-card-title">{value.title}</h3>
                  <p class="ucv-card-kicker">Why it matters</p>
                  <p class="ucv-card-desc">{value.description}</p>
                  <p class="ucv-card-note">{value.insight}</p>
                </div>

                <footer class="ucv-face-footer">
                  <div class="ucv-card-line"></div>
                </footer>
              </div>
            </div>
          </div>
        </button>
      </div>
    ))}
  </div>

  {/* Bottom decorative line */}
  <div class="absolute bottom-0 left-0 w-full h-[2px] bg-gradient-to-r from-transparent via-accent to-transparent"></div>
  </div>
</section>

<style>
  /* ULTRACTION Core Values - Enhanced Design */
  .ultra-core-values {
    /* Use design tokens from global.css instead of hardcoded colors */
    --ucv-primary: hsl(var(--color-primary));
    --ucv-accent: hsl(var(--color-accent));
    --ucv-bg: hsl(var(--color-bg));
    --ucv-card-bg: hsl(var(--color-surface));
    --ucv-text: hsl(var(--color-foreground));
    --ucv-text-light: hsl(var(--color-foreground) / 0.7);

    padding: 6rem 2rem;
    position: relative;
    overflow: hidden;
  }

  /* Screen reader only content */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }


  .ucv-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  .ucv-title {
    font-family: 'Public Sans', system-ui, sans-serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 300;
    font-style: italic;
    color: var(--ucv-primary);
    margin: 0;
    letter-spacing: -0.02em;
  }

  .ucv-title span {
    font-weight: 600;
    font-style: normal;
  }

  .ucv-underline {
    width: 60px;
    height: 3px;
    background: var(--ucv-accent);
    margin: 1.5rem auto 0;
  }

  .ucv-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2.75rem; /* 44px minimum touch target spacing */
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  @media (min-width: 640px) {
    .ucv-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .ucv-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }

  .ucv-card {
    position: relative;
    aspect-ratio: 4 / 5;
    perspective: 1200px;
  }

  .ucv-card-toggle {
    width: 100%;
    height: 100%;
    border: 0;
    background: transparent;
    padding: 0;
    margin: 0;
    cursor: pointer;
    text-align: left;
    display: block;
    transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .ucv-card:hover .ucv-card-toggle {
    transform: translateY(-4px);
  }

  .ucv-card-toggle:focus-visible {
    outline: 2px solid var(--ucv-accent);
    outline-offset: 4px;
  }

  .ucv-card-flip {
    position: relative;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transition: transform 0.65s cubic-bezier(0.2, 0.7, 0.2, 1);
  }

  .ucv-card.is-flipped .ucv-card-flip {
    transform: rotateY(180deg);
  }

  .ucv-card-face {
    position: absolute;
    inset: 0;
    backface-visibility: hidden;
    height: 100%;
    padding: 0;
    background: var(--ucv-card-bg);
    border: 1px solid hsl(var(--color-primary) / 0.1);
    transition: box-shadow 0.4s ease, background 0.4s ease;
  }

  .ucv-card-front {
    position: relative;
    overflow: hidden;
  }

  .ucv-card-back {
    transform: rotateY(180deg);
    background: hsl(var(--color-surface) / 0.88);
  }

  .ucv-card-shell {
    height: 100%;
    display: grid;
    grid-template-rows: auto 1fr auto;
    position: relative;
    z-index: 2;
  }

  .ucv-face-header,
  .ucv-face-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    padding: 0.8rem 1.15rem;
    text-transform: uppercase;
    letter-spacing: 0.16em;
    font-size: 0.58rem;
    font-weight: 600; /* Increased weight for better contrast */
    color: var(--ucv-primary);
    background: linear-gradient(90deg, hsl(var(--color-accent) / 0.88), hsl(var(--color-accent)));
    border-bottom: 1px solid hsl(var(--color-accent) / 0.7);
  }

  .ucv-face-footer {
    border-top: 1px solid hsl(var(--color-accent) / 0.7);
    border-bottom: 0;
    justify-content: flex-start;
    gap: 0.7rem;
    background: linear-gradient(90deg, hsl(var(--color-accent) / 0.92), hsl(var(--color-accent)));
  }

  .ucv-face-content {
    padding: 1.6rem 1.35rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .ucv-card:hover .ucv-card-front,
  .ucv-card.is-flipped .ucv-card-back {
    background: hsl(var(--color-surface) / 0.95);
    box-shadow: 0 20px 40px hsl(var(--color-primary) / 0.15);
  }

  .ucv-front-visual {
    position: absolute;
    inset: 0;
    display: block;
    pointer-events: none;
    z-index: 1;
  }

  .ucv-front-visual img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: 1;
    user-select: none;
    -webkit-user-drag: none;
  }

  .ucv-card-front .ucv-face-content {
    justify-content: flex-end;
    align-items: center;
    text-align: center;
    padding: 0 1.2rem 2rem;
  }

  .ucv-card-front .ucv-number {
    margin-bottom: 0;
    font-size: 0.62rem;
  }

  .ucv-card-front .ucv-icon-wrapper {
    width: 36px;
    height: 36px;
    margin-bottom: 0;
  }

  .ucv-logo-watermark {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
    z-index: 1;
  }

  .ucv-logo-watermark img {
    width: 112%;
    height: 112%;
    object-fit: contain;
    object-position: center;
    opacity: 0.1;
    user-select: none;
    -webkit-user-drag: none;
  }

  .ucv-number,
  .ucv-icon-wrapper,
  .ucv-card-title,
  .ucv-card-desc,
  .ucv-card-line,
  .ucv-card-hint {
    position: relative;
    z-index: 1;
  }

  .ucv-number {
    font-family: 'Public Sans', system-ui, sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    color: var(--ucv-accent);
    margin-bottom: 1rem;
    opacity: 1;
  }

  .ucv-icon-wrapper {
    width: 56px;
    height: 56px;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .ucv-icon {
    width: 100%;
    height: 100%;
    color: var(--ucv-accent);
    transition: all 0.3s ease;
  }

  .ucv-icon :global(svg) {
    display: block;
    width: 100%;
    height: 100%;
  }

  .ucv-card:hover .ucv-icon {
    color: var(--ucv-accent);
    transform: scale(1.1);
  }

  .ucv-icon-wrapper::before {
    content: '';
    position: absolute;
    inset: -4px;
    border: 1px solid var(--ucv-accent);
    opacity: 0;
    transition: all 0.3s ease;
  }

  .ucv-card:hover .ucv-icon-wrapper::before {
    inset: 0;
    opacity: 0.3;
  }

  .ucv-card-title {
    font-family: 'Public Sans', system-ui, sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--ucv-primary);
    margin: 0 0 1rem 0;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    opacity: 1;
  }

  .ucv-card-desc {
    font-size: 0.88rem;
    line-height: 1.65;
    color: var(--ucv-primary);
    margin: 0 0 0.8rem;
    max-width: 30ch;
    font-weight: 500;
  }

  .ucv-card-kicker {
    margin: 0 0 0.45rem;
    font-size: 0.62rem;
    font-weight: 700;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: var(--ucv-accent);
  }

  .ucv-card-note {
    margin: 0;
    font-size: 0.74rem;
    line-height: 1.55;
    color: hsl(var(--color-primary) / 0.72);
    max-width: 32ch;
  }

  .ucv-card-line {
    width: 20px;
    height: 2px;
    background: var(--ucv-accent);
    margin-top: 0;
    transition: width 0.3s ease;
    flex: 0 0 auto;
  }

  .ucv-card:hover .ucv-card-line {
    width: 100%;
  }

  /* Animation on load */
  @keyframes ucvFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .ucv-card {
    animation: ucvFadeIn 0.6s ease-out forwards;
    animation-delay: var(--delay, 0ms);
    opacity: 0;
  }
</style>

<script>
  const cards = document.querySelectorAll('.ucv-card');

  cards.forEach((card) => {
    const button = card.querySelector('.ucv-card-toggle');
    if (!(button instanceof HTMLButtonElement)) return;

    button.addEventListener('click', () => {
      const flipped = card.classList.toggle('is-flipped');
      button.setAttribute('aria-expanded', String(flipped));
    });
  });
</script>
