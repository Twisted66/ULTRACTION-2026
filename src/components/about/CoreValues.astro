---
// ULTRACTION Core Values Section - Masonry Design with Headers & Watermark
// Uses design tokens from global.css

interface CoreValue {
  id: string;
  title: string;
  description: string;
  insight: string;
  icon: string;
  image: string;
}

const coreValues: CoreValue[] = [
  {
    id: 'integrity',
    title: 'Integrity',
    description: 'Unwavering honesty and transparency in every interaction and commitment.',
    insight: 'We communicate clearly, honor commitments, and take ownership from planning to handover.',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3 8 3v7c0 6-8 10-8 10z"/></svg>`,
    image: '/images/core-values/integrity.svg'
  },
  {
    id: 'team-spirit',
    title: 'Team Spirit',
    description: 'Collaborative excellence driven by shared purpose and mutual respect.',
    insight: 'Engineers, supervisors, and site teams align early so execution stays coordinated and efficient.',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="8" r="2.5"/><path d="M12 12c-3.333 0-5 1.667-5 5v1h10v-1c0-3.333-1.667-5-5-5z"/></svg>`,
    image: '/images/core-values/team-spirit.svg'
  },
  {
    id: 'commitment',
    title: 'Commitment',
    description: 'Dedicated to delivering excellence from foundation to final handover.',
    insight: 'We stay accountable to schedule, quality, and client outcomes across every project milestone.',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2L2 7l10 5 10-5-10-5z"/><path d="M2 17l10 5 10-5"/><path d="M2 12l10 5 10-5"/></svg>`,
    image: '/images/core-values/commitment.svg'
  },
  {
    id: 'sustainability',
    title: 'Sustainability',
    description: 'Building responsibly for communities and the environment.',
    insight: 'Our choices prioritize durable systems, reduced waste, and long-term value for the built environment.',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 2v4"/><path d="M12 18v4"/><circle cx="12" cy="12" r="4"/></svg>`,
    image: '/images/core-values/sustainability.svg'
  },
  {
    id: 'performance',
    title: 'Performance',
    description: 'Exceeding expectations through precision engineering and execution.',
    insight: 'We track progress and quality continuously to deliver predictable results under real site constraints.',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/></svg>`,
    image: '/images/core-values/performance.svg'
  },
  {
    id: 'safety',
    title: 'Safety',
    description: 'Uncompromising standards protecting our people and communities.',
    insight: 'Risk planning, safe methods, and disciplined site behavior protect teams and project continuity.',
    icon: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3 8 3v7c0 6-8 10-8 10z"/><path d="M9 12l2 2 4-4"/></svg>`,
    image: '/images/core-values/safety.svg'
  }
];
---

<!-- ULTRACTION Core Values Section - Masonry Layout -->
<section class="ultra-core-values relative bg-surface text-primary overflow-hidden border-y border-primary/20">
  {/* Background pattern */}
  <div class="absolute inset-0 pointer-events-none">
    {/* Grid pattern overlay */}
    <div
      class="absolute inset-0 opacity-[0.03]"
      style={{
        backgroundImage: `
          linear-gradient(to right, currentColor 1px, transparent 1px),
          linear-gradient(to bottom, currentColor 1px, transparent 1px)
        `,
        backgroundSize: '60px 60px'
      }}
    ></div>

    {/* Animated gradient accent */}
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-accent/5 rounded-full blur-3xl animate-pulse-slow"></div>

    {/* Secondary gradient orb */}
    <div class="absolute bottom-0 right-1/4 w-80 h-80 bg-primary/5 rounded-full blur-3xl animate-pulse-slower"></div>
  </div>

  {/* Content wrapper with relative positioning for z-index */}
  <div class="relative z-10 px-6 md:px-12 lg:px-16 py-20 md:py-32">
    <div class="ucv-header">
      <div class="flex items-center gap-4 mb-4">
        <div class="h-[1px] w-12 bg-accent"></div>
        <span class="text-xs font-bold uppercase tracking-[0.3em] text-accent">Our Foundation</span>
      </div>
      <h2 class="ucv-title">Core Values</h2>
      <p class="ucv-subtitle">The principles that guide every decision we make and every structure we build.</p>
      <div class="ucv-underline"></div>
    </div>

    {/* Masonry Grid Container */}
    <div class="ucv-masonry-container">
      <div class="ucv-masonry">
        {coreValues.map((value, index) => (
          <article
            class={`ucv-masonry-card ${index === 0 || index === 4 ? 'tall' : 'normal'}`}
            data-value={value.id}
            style={`--delay: ${index * 100}ms`}
          >
            {/* Card Watermark - UGC Logo */}
            <div class="ucv-card-watermark" aria-hidden="true"></div>

            {/* Card Header */}
            <header class="ucv-card-header">
              <span class="ucv-card-number">{'0' + (index + 1)}</span>
              <div class="ucv-card-icon" set:html={value.icon} />
              <h3 class="ucv-card-title">{value.title}</h3>
            </header>

            {/* Card Content */}
            <div class="ucv-card-content">
              <p class="ucv-card-desc">{value.description}</p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>

  {/* Bottom decorative line */}
  <div class="absolute bottom-0 left-0 w-full h-[2px] bg-gradient-to-r from-transparent via-accent to-transparent"></div>
</section>

<style>
  /* ULTRACTION Core Values - Masonry Design */
  .ultra-core-values {
    --ucv-primary: hsl(var(--color-primary));
    --ucv-accent: hsl(var(--color-accent));
    --ucv-bg: hsl(var(--color-bg));
    --ucv-card-bg: hsl(var(--color-surface));
    --ucv-text: hsl(var(--color-foreground));
    position: relative;
    overflow: hidden;
  }

  .ucv-header {
    text-align: left;
    margin-bottom: 4rem;
    position: relative;
    z-index: 1;
  }

  .ucv-title {
    font-family: 'Public Sans', system-ui, sans-serif;
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 300;
    font-style: italic;
    color: var(--ucv-primary);
    margin: 0;
    letter-spacing: -0.02em;
  }

  .ucv-underline {
    width: 60px;
    height: 3px;
    background: var(--ucv-accent);
    margin: 1.5rem 0 0;
  }

  .ucv-subtitle {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 1rem;
    line-height: 1.6;
    color: hsl(var(--color-primary) / 0.7);
    max-width: 600px;
    margin: 1.5rem 0 0;
    font-weight: 400;
  }

  /* Masonry Container */
  .ucv-masonry-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  /* Container frame with UGC watermark background */
  .ucv-masonry-container::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url('/logo/UGC-LOGO-HQ.png');
    background-size: 100px 100px;
    background-position: center;
    background-repeat: repeat;
    pointer-events: none;
    z-index: 0;
    border-radius: 12px;
    opacity: 0.035;
    filter: grayscale(100%);
  }

  .ucv-masonry {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
    padding: 24px;
    border: 1px solid hsl(var(--color-accent) / 0.12);
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.5);
    position: relative;
    z-index: 1;
  }

  /* Masonry Card */
  .ucv-masonry-card {
    background: #fff;
    border: 1px solid hsl(var(--color-primary) / 0.08);
    border-radius: 8px;
    padding: 24px;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    z-index: 1;
  }

  .ucv-masonry-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 16px 32px hsl(var(--color-primary) / 0.1);
    border-color: hsl(var(--color-accent) / 0.2);
  }

  .ucv-masonry-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--ucv-accent);
    transform: scaleX(0);
    transition: transform 0.3s ease;
    z-index: 1;
  }

  .ucv-masonry-card:hover::before {
    transform: scaleX(1);
  }

  /* Card sizes */
  .ucv-masonry-card.tall {
    grid-row: span 2;
    min-height: 320px;
  }

  .ucv-masonry-card.normal {
    min-height: 180px;
  }

  /* Individual card watermark */
  .ucv-card-watermark {
    position: absolute;
    bottom: -10px;
    right: -10px;
    width: 120px;
    height: 120px;
    background-image: url('/logo/UGC-LOGO-HQ.png');
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0.04;
    pointer-events: none;
    z-index: 0;
    filter: grayscale(100%);
  }

  /* Card Header */
  .ucv-card-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
    padding-bottom: 12px;
    border-bottom: 1px solid hsl(var(--color-accent) / 0.1);
    position: relative;
    z-index: 1;
  }

  .ucv-card-number {
    font-size: 10px;
    font-weight: 700;
    letter-spacing: 0.2em;
    color: var(--ucv-accent);
    opacity: 0.4;
    text-transform: uppercase;
  }

  .ucv-card-icon {
    width: 40px;
    height: 40px;
    color: var(--ucv-accent);
    flex-shrink: 0;
  }

  .ucv-masonry-card.tall .ucv-card-icon {
    width: 56px;
    height: 56px;
  }

  .ucv-card-icon :global(svg) {
    display: block;
    width: 100%;
    height: 100%;
  }

  .ucv-card-title {
    font-family: 'Public Sans', system-ui, sans-serif;
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--ucv-primary);
    flex: 1;
  }

  .ucv-masonry-card.tall .ucv-card-title {
    font-size: 20px;
  }

  /* Card Content */
  .ucv-card-content {
    position: relative;
    z-index: 1;
  }

  .ucv-card-desc {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 13px;
    line-height: 1.6;
    color: hsl(var(--color-primary) / 0.65);
    margin: 0;
  }

  .ucv-masonry-card.tall .ucv-card-desc {
    font-size: 15px;
    line-height: 1.8;
  }

  /* Animation on load */
  @keyframes ucvFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .ucv-masonry-card {
    animation: ucvFadeIn 0.6s ease-out forwards;
    animation-delay: var(--delay, 0ms);
    opacity: 0;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .ucv-masonry {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .ucv-masonry {
      grid-template-columns: 1fr;
    }
    .ucv-masonry-card.tall {
      grid-row: span 1;
      min-height: 200px;
    }
    .ucv-title {
      font-size: clamp(2rem, 8vw, 2.5rem);
    }
  }
</style>
