---
// ContactCTA.astro - Call-to-action section
interface Props {
  title?: string;
  subtitle?: string;
  buttonText?: string;
  buttonLink?: string;
  showContactInfo?: boolean;
}

const {
  title = "Ready to Start Your Project?",
  subtitle = "Contact us today for a free consultation and let's discuss how we can bring your vision to life.",
  buttonText = "Get a Free Quote",
  buttonLink = "/contact",
  showContactInfo = true
} = Astro.props;
---

<section class="cta-section">
  <div class="cta-container">
    <div class="cta-content">
      <h2 class="cta-title">{title}</h2>
      <p class="cta-description">{subtitle}</p>
      <div class="cta-actions">
        <a href={buttonLink} class="btn btn-primary">{buttonText}</a>
      </div>
    </div>

    {showContactInfo && (
      <div class="cta-info">
        <div class="info-item">
          <div class="info-icon">üìû</div>
          <div class="info-content">
            <h3>Phone</h3>
            <a href="tel:+971000000000">+971 00 000 0000</a>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">‚úâÔ∏è</div>
          <div class="info-content">
            <h3>Email</h3>
            <a href="mailto:info@ultraction.ae">info@ultraction.ae</a>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">üìç</div>
          <div class="info-content">
            <h3>Location</h3>
            <p>United Arab Emirates</p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">üïê</div>
          <div class="info-content">
            <h3>Working Hours</h3>
            <p>Sun - Thu: 8:00 AM - 6:00 PM</p>
          </div>
        </div>
      </div>
    )}
  </div>
</section>

<style>
  .cta-section {
    padding: var(--space-16) var(--space-6);
    background: hsl(var(--color-primary));
    position: relative;
    overflow: hidden;
  }

  /* Subtle pattern overlay */
  .cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      radial-gradient(circle at 25% 25%, hsl(var(--color-accent) / 0.1) 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, hsl(var(--color-accent) / 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .cta-container {
    max-width: 1280px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--space-16);
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: var(--text-4xl);
    font-weight: 700;
    color: hsl(var(--color-bg));
    margin: 0 0 var(--space-6);
    line-height: 1.2;
    text-align: center;
  }

  .cta-description {
    font-size: var(--text-lg);
    line-height: 1.6;
    color: hsl(var(--color-surface));
    margin: 0 0 var(--space-8);
    text-align: center;
  }

  .cta-actions {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-4) var(--space-8);
    font-size: var(--text-base);
    font-weight: 600;
    text-decoration: none;
    border-radius: var(--radius);
    transition: all 0.3s ease;
    cursor: pointer;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: hsl(var(--color-bg));
    color: hsl(var(--color-primary));
    box-shadow: 0 4px 6px hsl(var(--color-primary) / 0.1);
  }

  .btn-primary:hover {
    background: hsl(var(--color-surface));
    color: hsl(var(--color-primary));
    transform: translateY(-3px);
    box-shadow: 0 8px 12px hsl(var(--color-primary) / 0.2);
  }

  .cta-info {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-4);
  }

  .info-item {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-6);
    background: hsl(var(--color-primary) / 0.7);
    border-radius: var(--radius);
    transition: all 0.3s ease;
  }

  .info-item:hover {
    background: hsl(var(--color-primary) / 0.8);
    transform: translateX(4px);
  }

  .info-icon {
    font-size: 28px;
    flex-shrink: 0;
    color: hsl(var(--color-accent));
  }

  .info-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .info-content h3 {
    font-size: var(--text-sm);
    font-weight: 600;
    color: hsl(var(--color-bg));
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .info-content a {
    font-size: var(--text-base);
    color: hsl(var(--color-surface));
    margin: 0;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .info-content a:hover {
    color: hsl(var(--color-accent));
  }

  .info-content p {
    font-size: var(--text-sm);
    color: hsl(var(--color-surface));
    margin: 0;
  }

  @media (max-width: 1024px) {
    .cta-container {
      grid-template-columns: 1fr;
      gap: var(--space-12);
    }

    .cta-content {
      max-width: 100%;
    }
  }

  @media (max-width: 768px) {
    .cta-section {
      padding: var(--space-12) var(--space-4);
    }

    .cta-title {
      font-size: var(--text-3xl);
    }

    .cta-description {
      font-size: var(--text-base);
      margin-bottom: var(--space-8);
    }

    .cta-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
    }

    .cta-info {
      grid-template-columns: 1fr;
    }

    .info-item {
      padding: var(--space-4);
    }
  }

  @media (max-width: 480px) {
    .cta-section {
      padding: var(--space-8) var(--space-4);
    }

    .cta-title {
      font-size: var(--text-2xl);
    }

    .cta-description {
      font-size: var(--text-base);
      margin-bottom: var(--space-6);
    }
  }
</style>
