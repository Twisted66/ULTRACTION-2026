---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

interface Props {
  showAll?: boolean;
  title?: string;
  limit?: number;
}

const { showAll = false, title = "Featured Projects", limit = 6 } = Astro.props;

// Get all projects and sort by completion date (newest first)
const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => {
  const dateA = new Date(a.data.completed);
  const dateB = new Date(b.data.completed);
  return dateB.getTime() - dateA.getTime();
});

// Limit projects if showAll is false
const projects = showAll ? sortedProjects : sortedProjects.slice(0, limit);
---

<section class="projects-section">
  <div class="projects-container">
    <div class="section-header">
      <h2 class="section-title">{title}</h2>
      <p class="section-description">
        Explore our portfolio of successful construction projects across the UAE.
        From commercial developments to residential complexes, we deliver excellence
        in every build.
      </p>
    </div>

    <div class="projects-grid">
      {projects.map((project) => (
        <a href={`/projects/${project.slug}`} class="project-card">
          <div class="project-image-wrapper">
            {project.data.images && project.data.images.length > 0 ? (
              <Image
                src={project.data.images[0]}
                alt={project.data.title}
                width={600}
                height={400}
                class="project-image"
                loading="lazy"
              />
            ) : (
              <div class="project-image-placeholder">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="3" y1="9" x2="21" y2="9"></line>
                  <line x1="9" y1="21" x2="9" y2="9"></line>
                </svg>
              </div>
            )}
            {project.data.featured && (
              <span class="project-badge featured">Featured</span>
            )}
            <span class="project-badge category">{project.data.category}</span>
          </div>

          <div class="project-content">
            <h3 class="project-title">{project.data.title}</h3>

            <div class="project-meta">
              <span class="meta-item">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                {project.data.location}
              </span>

              {project.data.client && (
                <span class="meta-item">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                  </svg>
                  {project.data.client}
                </span>
              )}

              {project.data.size && (
                <span class="meta-item">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="3" y1="9" x2="21" y2="9"></line>
                    <line x1="9" y1="21" x2="9" y2="9"></line>
                  </svg>
                  {project.data.size}
                </span>
              )}
            </div>
          </div>
        </a>
      ))}
    </div>

    <div class="section-cta">
      <a href="/projects" class="btn btn-primary">
        View All Projects
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .projects-section {
    padding: var(--space-12) var(--space-6);
    background: hsl(var(--color-surface));
  }

  .projects-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--space-12);
  }

  .section-title {
    font-size: var(--text-3xl);
    font-weight: 600;
    color: hsl(var(--color-primary));
    margin-bottom: var(--space-4);
    font-family: var(--font-heading);
  }

  .section-description {
    font-size: var(--text-base);
    line-height: 1.6;
    color: hsl(var(--color-muted-foreground, 2 64% 21% / 0.7));
    margin: 0;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-8);
    margin-bottom: var(--space-12);
  }

  .project-card {
    background: hsl(var(--color-background));
    border: 1px solid hsl(var(--color-border));
    border-radius: var(--radius);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(44, 24, 16, 0.08);
  }

  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 32px rgba(44, 24, 16, 0.16);
    border-color: hsl(var(--color-accent));
  }

  .project-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 3 / 2;
    overflow: hidden;
    background: hsl(var(--color-muted));
  }

  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .project-card:hover .project-image {
    transform: scale(1.08);
  }

  .project-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      135deg,
      hsl(var(--color-primary) / 0.1) 0%,
      hsl(var(--color-accent) / 0.1) 100%
    );
    color: hsl(var(--color-accent));
  }

  .project-image-placeholder svg {
    width: 64px;
    height: 64px;
    opacity: 0.5;
  }

  .project-badge {
    position: absolute;
    padding: var(--space-1) var(--space-3);
    font-size: var(--text-xs);
    font-weight: 600;
    border-radius: calc(var(--radius) + 2px);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .project-badge.featured {
    top: var(--space-3);
    left: var(--space-3);
    background: hsl(var(--color-accent));
    color: hsl(var(--color-bg));
    z-index: 2;
  }

  .project-badge.category {
    bottom: var(--space-3);
    right: var(--space-3);
    background: rgba(255, 255, 255, 0.95);
    color: hsl(var(--color-primary));
    backdrop-filter: blur(8px);
  }

  .project-content {
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .project-title {
    font-size: var(--text-xl);
    font-weight: 600;
    color: hsl(var(--color-primary));
    margin: 0;
    line-height: 1.3;
    font-family: var(--font-heading);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .project-meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .meta-item {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: hsl(var(--color-muted-foreground, 2 64% 21% / 0.75));
    font-weight: 500;
  }

  .meta-item svg {
    flex-shrink: 0;
    opacity: 0.7;
  }

  .section-cta {
    text-align: center;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    font-size: var(--text-base);
    font-weight: 500;
    text-decoration: none;
    border-radius: var(--radius);
    transition: all 0.2s ease;
  }

  .btn-primary {
    background: hsl(var(--color-accent));
    color: hsl(var(--color-bg));
    border: 2px solid hsl(var(--color-accent));
  }

  .btn-primary:hover {
    background: hsl(var(--color-accent) / 0.9);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(152, 97, 57, 0.3);
    gap: var(--space-3);
  }

  /* Tablet breakpoint */
  @media (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }
  }

  /* Mobile breakpoint */
  @media (max-width: 768px) {
    .projects-section {
      padding: var(--space-8) var(--space-4);
    }

    .section-title {
      font-size: var(--text-2xl);
    }

    .section-description {
      font-size: var(--text-sm);
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .project-content {
      padding: var(--space-4);
    }

    .project-title {
      font-size: var(--text-lg);
    }

    .btn {
      width: 100%;
    }
  }
</style>
