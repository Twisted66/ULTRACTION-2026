---
// ULTRACTION Team/Leadership Section
// Leadership profiles showcasing company leadership

interface TeamMember {
  name: string;
  title: string;
  bio: string;
  image?: string;
  linkedin?: string;
}

const teamMembers: TeamMember[] = [
  {
    name: 'Ahmed Al Mazrouei',
    title: 'Chief Executive Officer',
    bio: 'Leading ULTRACTION with over 20 years of expertise in civil construction and infrastructure development across the UAE. Committed to excellence and sustainable building practices.',
    image: '/images/team/ceo.jpg',
  },
  {
    name: 'Sarah Hassan',
    title: 'Chief Operations Officer',
    bio: 'Overseeing project execution with 15+ years in construction management. Expert in delivering complex infrastructure projects on time and within budget.',
    image: '/images/team/coo.jpg',
  },
  {
    name: 'Mohamed Al Falasi',
    title: 'Technical Director',
    bio: 'Engineering leader specializing in concrete structures and value engineering. Ensures technical excellence across all ULTRACTION projects.',
    image: '/images/team/technical-director.jpg',
  },
  {
    name: 'Fatima Al Shehhi',
    title: 'Business Development Director',
    bio: 'Driving strategic partnerships and business growth across the UAE. Building lasting relationships with clients and stakeholders.',
    image: '/images/team/bd-director.jpg',
  },
];
---

<section class="team-section relative bg-surface text-primary overflow-hidden border-y border-primary/20">
  <!-- Background pattern -->
  <div class="absolute inset-0 pointer-events-none">
    <div
      class="absolute inset-0 opacity-[0.03]"
      style={{
        backgroundImage: `
          linear-gradient(to right, currentColor 1px, transparent 1px),
          linear-gradient(to bottom, currentColor 1px, transparent 1px)
        `,
        backgroundSize: '60px 60px'
      }}
    ></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-accent/5 rounded-full blur-3xl animate-pulse-slow"></div>
  </div>

  <div class="relative z-10 px-6 md:px-12 lg:px-24 py-16 md:py-24">
    <!-- Section Header -->
    <div class="text-center mb-16 md:mb-20">
      <span class="text-xs font-bold uppercase tracking-[0.3em] text-accent block mb-4">
        Leadership Team
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-semibold text-primary mb-6">
        Meet Our <span class="italic font-light text-primary/70">Leaders</span>
      </h2>
      <div class="flex items-center justify-center gap-4">
        <div class="w-12 h-[2px] bg-accent"></div>
        <div class="w-2 h-2 bg-accent rotate-45"></div>
        <div class="w-12 h-[2px] bg-accent"></div>
      </div>
      <p class="mt-6 text-base text-primary/70 max-w-2xl mx-auto font-light leading-relaxed">
        Experienced professionals driving excellence in construction across the UAE.
      </p>
    </div>

    <!-- Team Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8 max-w-7xl mx-auto">
      {teamMembers.map((member, index) => (
        <article
          class="team-card group relative bg-card border border-primary/10 overflow-hidden transition-all duration-300"
          style={`--delay: ${index * 100}ms`}
        >
          <!-- Image Section -->
          <div class="relative aspect-[3/4] overflow-hidden bg-gradient-to-br from-primary/5 to-accent/5">
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="w-20 h-20 rounded-full bg-accent/10 flex items-center justify-center">
                <svg class="w-10 h-10 text-accent/50" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
              </div>
            </div>
            <!-- Hover Overlay -->
            {member.linkedin && (
              <div class="absolute inset-0 bg-primary/80 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                <a
                  href={member.linkedin}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="w-12 h-12 bg-white/10 rounded-full flex items-center justify-center hover:bg-white/20 transition-colors"
                  aria-label={`Connect with ${member.name} on LinkedIn`}
                >
                  <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                  </svg>
                </a>
              </div>
            )}
          </div>

          <!-- Content Section -->
          <div class="p-6">
            <h3 class="font-heading font-semibold text-lg text-primary mb-1 group-hover:text-accent transition-colors">
              {member.name}
            </h3>
            <p class="text-xs font-bold uppercase tracking-wider text-accent mb-3">
              {member.title}
            </p>
            <p class="text-sm text-primary/60 leading-relaxed line-clamp-3">
              {member.bio}
            </p>
          </div>

          <!-- Decorative corner accents -->
          <div class="card-corner corner-tl"></div>
          <div class="card-corner corner-br"></div>
        </article>
      ))}
    </div>
  </div>

  <!-- Bottom decorative line -->
  <div class="absolute bottom-0 left-0 w-full h-[2px] bg-gradient-to-r from-transparent via-accent to-transparent"></div>
</section>

<style>
  .team-card {
    --radius: 0px;
    border-radius: var(--radius);
  }

  .team-card:hover {
    border-color: hsl(var(--color-accent));
    box-shadow: 0 12px 32px rgba(44, 24, 16, 0.12);
    transform: translateY(-4px);
  }

  .card-corner {
    position: absolute;
    width: 0.5rem;
    height: 0.5rem;
    border-color: hsl(var(--color-accent));
    border-style: solid;
    border-width: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .team-card:hover .card-corner {
    opacity: 0.5;
  }

  .corner-tl {
    top: 0;
    left: 0;
    border-top-width: 2px;
    border-left-width: 2px;
  }

  .corner-br {
    bottom: 0;
    right: 0;
    border-bottom-width: 2px;
    border-right-width: 2px;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (prefers-reduced-motion: reduce) {
    .team-card {
      transition: none;
    }

    .team-card:hover {
      transform: none;
    }
  }
</style>
