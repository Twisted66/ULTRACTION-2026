const backgroundGridStyle = `
  background-image:
    linear-gradient(to right, currentColor 1px, transparent 1px),
    linear-gradient(to bottom, currentColor 1px, transparent 1px);
  background-size: 60px 60px;
`;
---

<section class="awards-section relative bg-surface text-primary overflow-hidden border-y border-primary/20">
  <!-- Background pattern -->
  <div class="absolute inset-0 pointer-events-none">
    <div
      class="absolute inset-0 opacity-[0.03]"
      style={backgroundGridStyle}
    ></div>
    <div class="absolute top-1/2 left-0 w-96 h-96 bg-accent/5 rounded-full blur-3xl animate-pulse-slow"></div>
  </div>

  <div class="relative z-10 px-6 md:px-12 lg:px-24 py-16 md:py-24">
    <!-- Section Header -->
    <div class="text-center mb-16 md:mb-20">
      <span class="text-xs font-bold uppercase tracking-[0.3em] text-accent block mb-4">
        Recognition & Excellence
      </span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-heading font-semibold text-primary mb-6">
        Awards & <span class="italic font-light text-primary/70">Certifications</span>
      </h2>
      <div class="flex items-center justify-center gap-4">
        <div class="w-12 h-[2px] bg-accent"></div>
        <div class="w-2 h-2 bg-accent rotate-45"></div>
        <div class="w-12 h-[2px] bg-accent"></div>
      </div>
      <p class="mt-6 text-base text-primary/70 max-w-2xl mx-auto font-light leading-relaxed">
        Recognized for excellence in safety, quality, and sustainable construction practices across the UAE.
      </p>
    </div>

    <!-- Awards Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 md:gap-6 max-w-7xl mx-auto">
      {awards.map((award, index) => (
        <article
          class="award-card group relative bg-card border border-primary/10 p-6 transition-all duration-300"
          style={`--delay: ${index * 75}ms`}
        >
          <!-- Icon -->
          <div class="award-icon mb-4">
            <svg
              class="w-10 h-10 text-accent/80 group-hover:text-accent transition-colors"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="1.5"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d={award.icon} />
            </svg>
          </div>

          <!-- Category Badge -->
          <div class="inline-block px-2 py-1 mb-3 text-[10px] font-bold uppercase tracking-wider border border-primary/20">
            {award.category}
          </div>

          <!-- Content -->
          <h3 class="font-heading font-semibold text-base text-primary mb-1 group-hover:text-accent transition-colors leading-tight">
            {award.name}
          </h3>
          <p class="text-xs font-bold text-accent mb-2">{award.year}</p>
          <p class="text-xs text-primary/60 leading-relaxed line-clamp-3">
            {award.description}
          </p>

          <!-- Decorative corner accents -->
          <div class="card-corner corner-tl"></div>
          <div class="card-corner corner-br"></div>
        </article>
      ))}
    </div>
  </div>

  <!-- Bottom decorative line -->
  <div class="absolute bottom-0 left-0 w-full h-[2px] bg-gradient-to-r from-transparent via-accent to-transparent"></div>
</section>

<style>
  .award-card {
    --radius: 0px;
    border-radius: var(--radius);
    min-height: 14rem;
    display: flex;
    flex-direction: column;
  }

  .award-card:hover {
    border-color: hsl(var(--color-accent));
    box-shadow: 0 8px 24px rgba(44, 24, 16, 0.12);
    transform: translateY(-2px);
  }

  .award-card:hover .award-icon {
    transform: scale(1.1);
  }

  .award-icon {
    transition: transform 0.3s ease;
  }

  .card-corner {
    position: absolute;
    width: 0.5rem;
    height: 0.5rem;
    border-color: hsl(var(--color-accent));
    border-style: solid;
    border-width: 0;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .award-card:hover .card-corner {
    opacity: 0.5;
  }

  .corner-tl {
    top: 0;
    left: 0;
    border-top-width: 2px;
    border-left-width: 2px;
  }

  .corner-br {
    bottom: 0;
    right: 0;
    border-bottom-width: 2px;
    border-right-width: 2px;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (prefers-reduced-motion: reduce) {
    .award-card {
      transition: none;
    }

    .award-card:hover {
      transform: none;
    }

    .award-icon {
      transition: none;
    }
  }
</style>
