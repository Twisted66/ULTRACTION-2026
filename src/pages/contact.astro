---
// Contact page - ULTRACTION General Contracting LLC
// Refactored to match Nova Construct prototype design

import Layout from '../layouts/Layout.astro';
import MagneticButton from '../components/ui/MagneticButton.astro';
import Globe3DDemo from '../components/3d-globe-demo';

// SEO Metadata
const title = "Contact Us - ULTRACTION GENERAL CONTRACTING LLC";
const description = "Get in touch with ULTRACTION for your construction project. Contact us via phone, email, or visit our office in Abu Dhabi, UAE.";
const allowedSubjects = new Set(['project', 'careers', 'other']);
const querySubject = Astro.url.searchParams.get('subject')?.toLowerCase() ?? '';
const selectedSubject = allowedSubjects.has(querySubject) ? querySubject : '';
---

<Layout
  title={title}
  description={description}
  image="/logo/UGC-HEADER.png"
>
  <div class="grid grid-cols-1 lg:grid-cols-2 min-h-[calc(100vh-104px)] border-t border-border">
      
      <!-- Left: Form (Brand Beige) -->
      <div class="bg-surface text-primary p-8 lg:p-20 flex flex-col justify-center order-2 lg:order-1 relative z-10 border-r border-primary/20 overflow-hidden">
        {/* Grid pattern overlay */}
        <div class="absolute inset-0 pointer-events-none opacity-[0.03]" style={{
          backgroundImage: `
            linear-gradient(to right, currentColor 1px, transparent 1px),
            linear-gradient(to bottom, currentColor 1px, transparent 1px)
          `,
          backgroundSize: '60px 60px'
        }}></div>

        {/* Animated gradient accent */}
        <div class="absolute top-0 left-1/4 w-96 h-96 bg-accent/5 rounded-full blur-3xl pointer-events-none animate-pulse-slow"></div>

        <div class="max-w-xl mx-auto w-full relative z-10">
          <span class="text-xs font-bold uppercase tracking-widest opacity-80 mb-4 block">Contact Us</span>
          <h1 class="text-5xl lg:text-7xl font-bold uppercase leading-none mb-12 font-heading">
            Building<br/><span class="text-accent italic">The Future</span>.
          </h1>
          <p class="text-lg mb-6 opacity-80 leading-relaxed">
            Have a project in mind? Our team is ready to collaborate on your construction and contracting needs across the UAE and KSA.
          </p>

          <p class="text-[10px] uppercase tracking-widest mb-10 opacity-60 font-bold">
            Fields marked with <span class="text-accent">*</span> are required.
          </p>
          
          <form class="flex flex-col gap-8" method="POST" action="/api/contact" data-contact-form>
            <div class="group">
              <label class="block text-xs uppercase font-bold tracking-[0.2em] mb-3 opacity-70 text-accent" for="name">
                <span class="flex items-center gap-2">
                  <span class="w-4 h-[2px] bg-accent"></span>
                  Name <span class="text-accent">*</span>
                </span>
              </label>
              <input class="form-input w-full bg-transparent border-b-2 border-primary/20 py-4 text-xl transition-all duration-300 placeholder-primary/30 focus-visible:border-accent focus-visible:outline-none" id="name" name="name" placeholder="Enter your name" type="text" required aria-required="true" />
            </div>

            <div class="group">
              <label class="block text-xs uppercase font-bold tracking-[0.2em] mb-3 opacity-70 text-accent" for="email">
                <span class="flex items-center gap-2">
                  <span class="w-4 h-[2px] bg-accent"></span>
                  Email <span class="text-accent">*</span>
                </span>
              </label>
              <input class="form-input w-full bg-transparent border-b-2 border-primary/20 py-4 text-xl transition-all duration-300 placeholder-primary/30 focus-visible:border-accent focus-visible:outline-none" id="email" name="email" placeholder="Enter your email" type="email" required aria-required="true" />
            </div>

            <div class="group">
               <label class="block text-xs uppercase font-bold tracking-[0.2em] mb-3 opacity-70 text-accent" for="subject">
                 <span class="flex items-center gap-2">
                   <span class="w-4 h-[2px] bg-accent"></span>
                   Subject <span class="text-accent">*</span>
                 </span>
               </label>
               <select class="form-input w-full bg-transparent border-b-2 border-primary/20 py-4 text-xl transition-all duration-300 cursor-pointer focus-visible:border-accent focus-visible:outline-none appearance-none bg-[url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTIiIGhlaWdodD0iOCIgdmlld0JveD0iMCAwIDEyIDgiIGZpbGw9Im5vbmUiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+PHBhdGggZD0iTTUuOTk5OTkgMUwxMS4zIDZMNS45OTk5OSAxMUwwLjcgNkw1Ljk5OTkgMVoiIHN0cm9rZT0iIzI4MTE4MCIgc3Ryb2tlLWxpbmVjYXA9InJvdW5kIiBzdHJva2UtbGluZWpvaW49InJvdW5kIi8+PC9zdmc+')] bg-[length:16px_10px] bg-[right_8px_center] bg-no-repeat pr-10" id="subject" name="subject" required aria-required="true">
                  <option value="" disabled={selectedSubject !== ''} selected={selectedSubject === ''}>Select a topic</option>
                  <option value="project" selected={selectedSubject === 'project'}>New Project Inquiry</option>
                  <option value="careers" selected={selectedSubject === 'careers'}>Careers</option>
                  <option value="other" selected={selectedSubject === 'other'}>Other</option>
               </select>
            </div>

            <div class="group">
               <label class="block text-xs uppercase font-bold tracking-[0.2em] mb-3 opacity-70 text-accent" for="message">
                 <span class="flex items-center gap-2">
                   <span class="w-4 h-[2px] bg-accent"></span>
                   Message <span class="text-accent">*</span>
                 </span>
               </label>
               <textarea class="form-input w-full bg-transparent border-b-2 border-primary/20 py-4 text-xl transition-all duration-300 placeholder-primary/30 resize-none h-32 focus-visible:border-accent focus-visible:outline-none" id="message" name="message" placeholder="Tell us about your project..." required aria-required="true"></textarea>
            </div>

            <div class="group">
               <label class="block text-xs uppercase font-bold tracking-widest mb-2 opacity-80" for="attachment">Attachment <span class="font-normal text-primary/90">(Optional)</span></label>
               <div class="relative">
                  <input class="w-full bg-transparent border-b border-primary/20 py-4 text-base transition-colors file:mr-4 file:py-2 file:px-4 file:rounded-none file:border-0 file:bg-primary file:text-primary-foreground file:cursor-pointer focus-visible:border-primary focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 focus-visible:ring-offset-surface" id="attachment" name="attachment" type="file" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png,.zip,.rar" aria-describedby="attachment-hint" />
                  <p id="attachment-hint" class="text-xs opacity-50 mt-2">PDF, DOC, DOCX, JPG, PNG, ZIP, RAR (Max 10MB)</p>
               </div>
               <div id="file-name" class="text-sm mt-2 opacity-80 hidden"></div>
            </div>

            <div class="sr-only" aria-hidden="true">
              <label for="company">Company</label>
              <input id="company" name="company" type="text" tabindex="-1" autocomplete="off" />
            </div>

            <div id="form-status" class="hidden border px-4 py-3 text-sm font-medium" role="status" aria-live="polite"></div>
            
            <div class="mt-8">
              <MagneticButton
                type="submit"
                variant="primary"
                magnetic={false}
                ripple={false}
                size="lg"
                class="w-full sm:w-auto relative overflow-hidden bg-[#800000] text-white hover:bg-[#800000] focus-visible:outline-[#800000]"
                data-submit-button
              >
                <span data-submit-label class="flex items-center gap-4 transition-all duration-300">
                  Send Message
                  <svg data-submit-icon class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
                </span>
                <span data-submit-spinner class="absolute inset-0 flex items-center justify-center opacity-0 pointer-events-none transition-opacity duration-300">
                  <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                </span>
              </MagneticButton>
            </div>
          </form>
        </div>
      </div>

      <!-- Right: Globe (Default Background) -->
      <div class="bg-background relative min-h-[50vh] lg:min-h-screen order-1 lg:order-2 overflow-hidden flex items-start justify-center pt-10">
          <div class="absolute inset-0 z-0 flex items-center justify-center">
               <Globe3DDemo client:only="react" className="h-[clamp(550px,80vh,900px)] w-[min(150%,1100px)] -translate-y-36 lg:-translate-y-48" />
          </div>

          {/* Grid pattern overlay */}
          <div class="absolute inset-0 pointer-events-none opacity-[0.03]" style={{
            backgroundImage: `
              linear-gradient(to right, currentColor 1px, transparent 1px),
              linear-gradient(to bottom, currentColor 1px, transparent 1px)
            `,
            backgroundSize: '60px 60px'
          }}></div>

          {/* Animated gradient accent */}
          <div class="absolute top-0 right-1/4 w-96 h-96 bg-accent/5 rounded-full blur-3xl pointer-events-none animate-pulse-slow"></div>

          <!-- Location Overlay -->
          <div
            class="absolute bottom-20 left-6 right-6 xl:bottom-12 xl:left-12 xl:right-12 z-20 pointer-events-none"
            aria-labelledby="contact-locations"
          >
            <div class="text-primary pointer-events-auto bg-white/95 backdrop-blur-xl rounded-2xl border border-primary/20 w-full max-w-[900px] overflow-hidden">
              <div class="bg-[#800000] px-6 py-4">
                <h3 class="text-sm font-bold uppercase tracking-[0.2em] text-white">Main Headquarters</h3>
              </div>

              <div class="p-6 grid gap-6 xl:grid-cols-2">
                <div>
                  <h2 id="contact-locations" class="sr-only">Contact Locations</h2>
                  <div class="space-y-6 text-sm">
                    <div class="group">
                      <h4 class="font-bold uppercase tracking-widest text-[11px] text-accent mb-3">Abu Dhabi, UAE</h4>
                      <p class="text-primary leading-relaxed font-semibold text-base">
                        Office 02, 1st Floor, 9 Ar Raha 6 St, Musaffah M3
                      </p>
                      <div class="mt-5 flex flex-col gap-2 text-[14px] text-primary italic font-medium">
                        <span class="flex items-center gap-2">T: <span class="not-italic font-bold">+971 2 650 1694</span></span>
                        <span class="flex items-center gap-2">M: <span class="not-italic font-bold">+971 56 444 4045</span></span>
                        <span class="mt-1 not-italic font-bold text-accent">info@ultraction.ae</span>
                      </div>
                    </div>

                    <div class="pt-5 border-t border-primary/20">
                      <h4 class="font-bold uppercase tracking-widest text-[11px] text-accent mb-3">KSA Branch</h4>
                      <p class="text-primary leading-relaxed font-semibold text-base mb-1">AL Bawady International Contracting LLC</p>
                      <div class="flex flex-col gap-2 text-[14px] text-primary italic font-medium">
                        <span class="flex items-center gap-2">T: <span class="not-italic font-bold">+966 50 000 2281</span></span>
                        <a
                          href="https://www.albawady.sa"
                          target="_blank"
                          rel="noopener noreferrer"
                          class="not-italic font-bold text-accent underline"
                        >
                          www.albawady.sa
                        </a>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="flex flex-col">
                  <h4 class="text-xs font-bold uppercase tracking-[0.2em] text-accent mb-3">Headquarters Map</h4>
                  <div class="relative aspect-square min-h-[180px] overflow-hidden rounded-xl border border-primary/20 flex-1">
                    <iframe
                      src="https://maps.google.com/maps?q=24.3713,54.5205+(Office+02,+1st+Floor,+9+Ar+Raha+6+St,+Musaffah+M3,+Abu+Dhabi,+UAE)&t=&z=15&ie=UTF8&iwloc=&output=embed"
                      width="100%"
                      height="100%"
                      style="border: 0;"
                      allowfullscreen=""
                      loading="lazy"
                      referrerpolicy="no-referrer-when-downgrade"
                      title="ULTRACTION Headquarters Mini Map"
                      class="map-embed absolute inset-0 h-full w-full"
                    ></iframe>
                  </div>

                  <div class="mt-2 flex gap-2">
                    <a
                      href="https://maps.google.com/?q=24.3713,54.5205"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex-1 bg-white backdrop-blur-md px-3 py-2 border-l-4 border-accent hover:bg-surface transition-colors group"
                    >
                      <span class="block text-[9px] uppercase tracking-widest text-accent font-bold mb-0.5">Abu Dhabi HQ</span>
                      <span class="text-[10px] font-semibold text-primary flex items-center gap-1">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        Directions
                      </span>
                    </a>
                    <a
                      href="https://maps.google.com/?q=24.7136,46.6753"
                      target="_blank"
                      rel="noopener noreferrer"
                      class="flex-1 bg-white backdrop-blur-md px-3 py-2 border-l-4 border-primary hover:bg-surface transition-colors group"
                    >
                      <span class="block text-[9px] uppercase tracking-widest text-primary font-bold mb-0.5">KSA Branch</span>
                      <span class="text-[10px] font-semibold text-primary flex items-center gap-1">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        Directions
                      </span>
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>

    </div>

</Layout>

<style>
  /* Enhanced Form Styles */
  .form-input {
    position: relative;
    transition: all var(--motion-duration-base) var(--motion-ease-standard);
  }

  .form-input:focus {
    outline: none;
  }

  .form-input::placeholder {
    transition: opacity var(--motion-duration-base) var(--motion-ease-standard);
  }

  .form-input:focus::placeholder {
    opacity: 0.5;
  }

  /* Animated underline for inputs */
  .form-input {
    background-image: linear-gradient(to right, hsl(var(--accent)) 0%, hsl(var(--accent)) 100%);
    background-size: 0% 2px;
    background-repeat: no-repeat;
    background-position: left bottom;
  }

  .form-input:focus {
    background-size: 100% 2px;
  }

  /* Form group hover effect */
  .group:hover .form-input {
    border-color: hsl(var(--primary) / 0.4);
  }

  /* Select dropdown styling */
  select.form-input option {
    background: hsl(var(--surface));
    color: hsl(var(--primary));
    padding: 8px;
  }
</style>

<script is:inline>
/** @type {HTMLFormElement} */
/** @type {HTMLButtonElement} */
/** @type {HTMLElement} */
/** @type {HTMLSelectElement} */
/** @type {HTMLInputElement} */
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('[data-contact-form]');
    if (!(form instanceof HTMLFormElement)) return;

    const submitButton = form.querySelector('[data-submit-button]');
    const submitLabel = form.querySelector('[data-submit-label]');
    const submitSpinner = form.querySelector('[data-submit-spinner]');
    const submitIcon = form.querySelector('[data-submit-icon]');
    const statusBox = document.getElementById('form-status');
    const subjectSelect = form.querySelector('#subject');
    const fileInput = document.querySelector('#attachment');
    const fileNameDisplay = document.getElementById('file-name');

    // Display selected file name
    if (fileInput instanceof HTMLInputElement && fileNameDisplay) {
      fileInput.addEventListener('change', () => {
        if (fileInput.files && fileInput.files[0]) {
          const file = fileInput.files[0];
          const sizeInMB = (file.size / (1024 * 1024)).toFixed(2);
          fileNameDisplay.textContent = `${file.name} (${sizeInMB} MB)`;
          fileNameDisplay.classList.remove('hidden');
        } else {
          fileNameDisplay.classList.add('hidden');
        }
      });
    }

    const setStatus = (type, message) => {
      if (!(statusBox instanceof HTMLElement)) return;
      statusBox.classList.remove('hidden', 'border-red-700', 'bg-red-50', 'text-red-800', 'border-green-700', 'bg-green-50', 'text-green-800');
      if (type === 'success') {
        statusBox.classList.add('border-green-700', 'bg-green-50', 'text-green-800');
      } else {
        statusBox.classList.add('border-red-700', 'bg-red-50', 'text-red-800');
      }
      statusBox.textContent = message;
    };

    form.addEventListener('submit', async (event) => {
      event.preventDefault();
      if (!form.reportValidity()) return;

      const formData = new FormData(form);
      const selected = String(formData.get('subject') || '');

      // Validate file size (max 10MB)
      const file = /** @type {File|null} */ (formData.get('attachment'));
      if (file && file.size > 10 * 1024 * 1024) {
        setStatus('error', 'File size must be less than 10MB.');
        return;
      }

      if (submitButton instanceof HTMLButtonElement) {
        submitButton.disabled = true;
        form.setAttribute('aria-busy', 'true');
      }
      if (submitLabel instanceof HTMLElement) {
        submitLabel.style.opacity = '0';
      }
      if (submitIcon instanceof HTMLElement) {
        submitIcon.style.opacity = '0';
      }
      if (submitSpinner instanceof HTMLElement) {
        submitSpinner.classList.remove('opacity-0');
        submitSpinner.classList.add('opacity-100');
      }

      try {
        const response = await fetch('/api/contact', {
          method: 'POST',
          headers: { Accept: 'application/json' },
          body: formData,
        });

        const result = await response.json().catch(() => ({ ok: false, message: 'Unexpected server response.' }));
        if (!response.ok || !result.ok) {
          throw new Error(result.message || 'Unable to send your message right now.');
        }

        setStatus('success', result.message || 'Your message has been sent.');
        form.reset();
        if (fileNameDisplay instanceof HTMLElement) fileNameDisplay.classList.add('hidden');
        if (subjectSelect instanceof HTMLSelectElement && selected) {
          subjectSelect.value = selected;
        }
      } catch (error) {
        const errorMessage = error instanceof Error ? error.message : 'Unable to send your message right now.';
        setStatus('error', errorMessage);
      } finally {
        if (submitButton instanceof HTMLButtonElement) {
          submitButton.disabled = false;
          form.removeAttribute('aria-busy');
        }
        if (submitLabel instanceof HTMLElement) {
          submitLabel.style.opacity = '1';
        }
        if (submitIcon instanceof HTMLElement) {
          submitIcon.style.opacity = '1';
        }
        if (submitSpinner instanceof HTMLElement) {
          submitSpinner.classList.add('opacity-0');
          submitSpinner.classList.remove('opacity-100');
        }
      }
    });
  });
</script>

<style>
  /* Animate pulse delay */
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  /* Slow pulse for accent blob */
  @keyframes pulse-slow {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.3);
    }
  }

  .animate-pulse-slow {
    animation: pulse-slow 12s ease-in-out infinite;
  }

  /* Map iframe styling */
  .map-embed {
    filter: contrast(1.05) saturate(0.9);
  }

  /* Map marker button hover effects */
  a[href*='maps.google.com'] svg {
    transition: transform 0.3s ease;
  }

  a[href*='maps.google.com']:hover svg {
    transform: translateY(-2px);
  }

</style>
