---
// Commercial Projects page - ULTRACTION General Contracting LLC

import Layout from '../../layouts/Layout.astro';

const title = "Commercial Projects - ULTRACTION GENERAL CONTRACTING LLC";
const description = "Explore our portfolio of commercial construction projects including office towers, retail spaces, and hospitality developments across the UAE.";
const category = "commercial";
const categoryName = "COMMERCIAL";
const categoryIcon = "domain";
---

<Layout title={title} description={description} image="/logo/UGC-HEADER.png">
  <!-- Projects Header with Navigation -->
  <section class="border-b border-primary/20 dark:border-black/20">
    <div class="grid grid-cols-1 md:grid-cols-12">
      <div class="col-span-12 md:col-span-4 p-6 border-b md:border-b-0 md:border-r border-primary/20 dark:border-black/20 flex flex-col justify-center">
        <a href="/projects" class="inline-flex items-center gap-2 text-xs uppercase tracking-widest opacity-60 hover:opacity-100 mb-2 transition-opacity">
          <span class="material-symbols-outlined text-sm">arrow_back</span>
          Back to All Projects
        </a>
        <h1 class="text-3xl font-bold uppercase tracking-tight mb-1">Commercial</h1>
        <p class="text-xs uppercase tracking-widest opacity-60">Office Towers, Retail & Hospitality</p>
      </div>

      <!-- Category Navigation - 6 Categories -->
      <div class="col-span-12 md:col-span-8 grid grid-cols-3 md:grid-cols-6">
        <a href="/projects" class="h-24 border-r border-b md:border-b-0 border-primary/20 dark:border-black/20 flex flex-col items-center justify-center gap-1 transition-all duration-300 bg-[#DDD4C5] dark:bg-[#2A2621] text-primary dark:text-white hover:bg-primary hover:text-white">
          <span class="material-symbols-outlined text-xl">apps</span>
          <span class="text-[10px] font-bold uppercase tracking-wider">ALL</span>
        </a>
        <a href="/projects/infrastructure" class="h-24 border-r border-b md:border-b-0 border-primary/20 dark:border-black/20 flex flex-col items-center justify-center gap-1 transition-all duration-300 bg-[#DDD4C5] dark:bg-[#2A2621] text-primary dark:text-white hover:bg-primary hover:text-white">
          <span class="material-symbols-outlined text-xl">bridge</span>
          <span class="text-[10px] font-bold uppercase tracking-wider">INFRASTRUCTURE</span>
        </a>
        <a href="/projects/industrial" class="h-24 border-r border-b md:border-b-0 border-primary/20 dark:border-black/20 flex flex-col items-center justify-center gap-1 transition-all duration-300 bg-[#DDD4C5] dark:bg-[#2A2621] text-primary dark:text-white hover:bg-primary hover:text-white">
          <span class="material-symbols-outlined text-xl">factory</span>
          <span class="text-[10px] font-bold uppercase tracking-wider">INDUSTRIAL</span>
        </a>
        <a href="/projects/marine" class="h-24 border-r border-b md:border-b-0 border-primary/20 dark:border-black/20 flex flex-col items-center justify-center gap-1 transition-all duration-300 bg-[#DDD4C5] dark:bg-[#2A2621] text-primary dark:text-white hover:bg-primary hover:text-white">
          <span class="material-symbols-outlined text-xl">sailing</span>
          <span class="text-[10px] font-bold uppercase tracking-wider">MARINE</span>
        </a>
        <a href="/projects/residential" class="h-24 border-r border-b md:border-b-0 border-primary/20 dark:border-black/20 flex flex-col items-center justify-center gap-1 transition-all duration-300 bg-[#DDD4C5] dark:bg-[#2A2621] text-primary dark:text-white hover:bg-primary hover:text-white">
          <span class="material-symbols-outlined text-xl">home_work</span>
          <span class="text-[10px] font-bold uppercase tracking-wider">RESIDENTIAL</span>
        </a>
        <a href="/projects/commercial" class="h-24 flex flex-col items-center justify-center gap-1 transition-all duration-300 bg-primary text-white">
          <span class="material-symbols-outlined text-xl">domain</span>
          <span class="text-[10px] font-bold uppercase tracking-wider">COMMERCIAL</span>
        </a>
      </div>
    </div>
  </section>

  <!-- Projects Grid - 2:1:2 Masonry Layout -->
  <section class="border-b border-primary/20 dark:border-black/20 bg-background-light dark:bg-background-dark">
    <div class="grid grid-cols-1 md:grid-cols-12 auto-rows-min">

      <!-- Column 1 -->
      <div class="col-span-12 md:col-span-4 flex flex-col border-r border-primary/20 dark:border-black/20">
        <div class="project-card relative group overflow-hidden h-[450px] border-b border-primary/20 dark:border-black/20">
          <img alt="Office Tower Business Bay" class="w-full h-full object-cover transition-transform duration-700" src="/images/projects/p175_img01_xref7099.jpeg" />
          <div class="absolute inset-0 bg-black/10 group-hover:bg-black/30 transition-colors"></div>
          <div class="absolute bottom-4 left-4 right-4 z-20">
            <div class="bg-primary/80 backdrop-blur-sm p-4 text-white">
              <span class="text-[10px] uppercase tracking-widest block mb-1 text-accent-brown">Office Tower</span>
              <h3 class="text-lg font-bold uppercase leading-tight">Business Bay Tower</h3>
              <div class="mt-2 flex justify-between items-end border-t border-white/20 pt-2">
                <span class="text-[10px] opacity-70">2024</span>
                <span class="material-symbols-outlined text-sm">arrow_forward</span>
              </div>
            </div>
          </div>
        </div>
        <div class="project-card relative group overflow-hidden h-[350px]">
          <img alt="Retail Mall" class="w-full h-full object-cover transition-transform duration-700" src="/images/projects/p110_img01_xref6695.jpeg" />
          <div class="absolute inset-0 bg-black/10 group-hover:bg-black/30 transition-colors"></div>
          <div class="absolute top-4 left-4 z-20">
            <span class="inline-block px-2 py-1 bg-white/90 text-primary text-[10px] font-bold uppercase tracking-wider">Commercial</span>
          </div>
          <div class="absolute bottom-4 left-4 z-20 text-white">
            <h3 class="text-lg font-bold uppercase mb-1 drop-shadow-md">Retail Mall</h3>
            <p class="text-[10px] uppercase tracking-wide opacity-90 drop-shadow-md">Dubai Mall Extension</p>
          </div>
        </div>
      </div>

      <!-- Column 2 - Featured Project -->
      <div class="col-span-12 md:col-span-4 flex flex-col border-r border-primary/20 dark:border-black/20">
        <div class="project-card relative group overflow-hidden h-[800px] border-b md:border-b-0 border-primary/20 dark:border-black/20">
          <img alt="Warehouse Construction" class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-105" src="/images/projects/p110_img01_xref6695.jpeg" />
          <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-transparent to-black/80 opacity-80"></div>
          <div class="absolute top-0 left-8 h-full w-[1px] bg-white/10 z-10"></div>
          <div class="absolute top-0 right-8 h-full w-[1px] bg-white/10 z-10"></div>
          <div class="absolute top-12 left-0 w-full text-center z-20">
            <span class="inline-block px-3 py-1 border border-white/30 text-white text-[10px] uppercase tracking-[0.2em] backdrop-blur-md">Featured</span>
          </div>
          <div class="absolute bottom-12 left-12 right-12 z-20 text-white text-center">
            <h2 class="text-5xl font-bold uppercase mb-4 leading-none tracking-tight">Warehouse<br/>Complex</h2>
            <div class="flex justify-center gap-6 text-[11px] uppercase tracking-widest font-medium">
              <span class="flex items-center gap-1"><span class="material-symbols-outlined text-sm text-accent-brown">location_on</span> Jebel Ali</span>
              <span class="flex items-center gap-1"><span class="material-symbols-outlined text-sm text-accent-brown">calendar_month</span> 2023</span>
              <span class="flex items-center gap-1"><span class="material-symbols-outlined text-sm text-accent-brown">domain</span> Logistics</span>
            </div>
            <button class="mt-8 px-8 py-3 bg-white text-primary text-xs font-bold uppercase tracking-widest hover:bg-accent-brown hover:text-white transition-colors">
              View Project
            </button>
          </div>
        </div>
      </div>

      <!-- Column 3 -->
      <div class="col-span-12 md:col-span-4 flex flex-col">
        <div class="project-card relative group overflow-hidden h-[350px] border-b border-primary/20 dark:border-black/20">
          <img alt="Hotel Construction" class="w-full h-full object-cover transition-transform duration-700" src="/images/projects/p118_img01_xref6741.jpeg" />
          <div class="absolute inset-0 bg-black/20 group-hover:bg-black/40 transition-colors"></div>
          <div class="absolute top-4 right-4 z-20">
            <span class="material-symbols-outlined text-white opacity-80">arrow_outward</span>
          </div>
          <div class="absolute bottom-0 left-0 w-full p-6 text-white z-20 bg-gradient-to-t from-black/80 to-transparent">
            <h3 class="text-xl font-bold uppercase mb-1">Hotel Resort</h3>
            <p class="text-[10px] uppercase tracking-widest opacity-80">Palm Jumeirah</p>
          </div>
        </div>
        <div class="project-card relative group overflow-hidden h-[450px]">
          <img alt="Restaurant Complex" class="w-full h-full object-cover transition-transform duration-700" src="/images/projects/p083_img01_xref6507.jpeg" />
          <div class="absolute inset-0 bg-black/10 group-hover:bg-black/30 transition-colors"></div>
          <div class="absolute top-6 left-6 z-20">
            <div class="flex flex-col items-start gap-1">
              <span class="text-3xl font-bold text-white uppercase leading-none">04</span>
              <span class="h-[1px] w-8 bg-white/50"></span>
            </div>
          </div>
          <div class="absolute bottom-6 right-6 z-20 text-right">
            <h3 class="text-2xl font-bold text-white uppercase mb-1 leading-tight">Restaurant<br/>Complex</h3>
            <p class="text-[10px] text-white uppercase tracking-widest font-medium">Downtown Dubai</p>
          </div>
        </div>
      </div>

      <!-- Additional Row -->
      <div class="col-span-12 md:col-span-4 flex flex-col border-r border-t border-primary/20 dark:border-black/20">
        <div class="project-card relative group overflow-hidden h-[400px] border-b border-primary/20 dark:border-black/20">
          <img alt="Shopping Center" class="w-full h-full object-cover transition-transform duration-700" src="/images/projects/p149_img01_xref6933.jpeg" />
          <div class="absolute inset-0 bg-black/20 group-hover:bg-black/40 transition-colors"></div>
          <div class="absolute bottom-0 left-0 w-full p-6 text-white z-20 bg-gradient-to-t from-black/80 to-transparent">
            <span class="text-[10px] uppercase tracking-widest text-accent-brown">Commercial</span>
            <h3 class="text-xl font-bold uppercase mt-1">Shopping Center</h3>
          </div>
        </div>
        <div class="project-card relative group overflow-hidden h-[400px]">
          <img alt="Showroom" class="w-full h-full object-cover transition-transform duration-700" src="/images/projects/p190_img01_xref7226.jpeg" />
          <div class="absolute inset-0 bg-black/20 group-hover:bg-black/40 transition-colors"></div>
          <div class="absolute bottom-0 left-0 w-full p-6 text-white z-20 bg-gradient-to-t from-black/80 to-transparent">
            <span class="text-[10px] uppercase tracking-widest text-accent-brown">Commercial</span>
            <h3 class="text-xl font-bold uppercase mt-1">Car Showroom</h3>
          </div>
        </div>
      </div>

      <div class="col-span-12 md:col-span-4 flex flex-col border-r border-t border-primary/20 dark:border-black/20">
        <div class="project-card relative group overflow-hidden h-[400px] border-b border-primary/20 dark:border-black/20">
          <img alt="Corporate Office" class="w-full h-full object-cover transition-transform duration-700" src="/images/projects/p175_img01_xref7099.jpeg" />
          <div class="absolute inset-0 bg-black/20 group-hover:bg-black/40 transition-colors"></div>
          <div class="absolute bottom-0 left-0 w-full p-6 text-white z-20 bg-gradient-to-t from-black/80 to-transparent">
            <span class="text-[10px] uppercase tracking-widest text-accent-brown">Commercial</span>
            <h3 class="text-xl font-bold uppercase mt-1">Corporate Office</h3>
          </div>
        </div>
        <div class="project-card relative group overflow-hidden h-[400px]">
          <img alt="Co-working Space" class="w-full h-full object-cover transition-transform duration-700" src="/images/projects/p110_img01_xref6695.jpeg" />
          <div class="absolute inset-0 bg-black/20 group-hover:bg-black/40 transition-colors"></div>
          <div class="absolute bottom-0 left-0 w-full p-6 text-white z-20 bg-gradient-to-t from-black/80 to-transparent">
            <span class="text-[10px] uppercase tracking-widest text-accent-brown">Commercial</span>
            <h3 class="text-xl font-bold uppercase mt-1">Co-working Space</h3>
          </div>
        </div>
      </div>

      <div class="col-span-12 md:col-span-4 flex flex-col border-t border-primary/20 dark:border-black/20">
        <div class="project-card relative group overflow-hidden h-[400px] border-b border-primary/20 dark:border-black/20">
          <img alt="Healthcare Facility" class="w-full h-full object-cover transition-transform duration-700" src="/images/projects/p118_img01_xref6741.jpeg" />
          <div class="absolute inset-0 bg-black/20 group-hover:bg-black/40 transition-colors"></div>
          <div class="absolute bottom-0 left-0 w-full p-6 text-white z-20 bg-gradient-to-t from-black/80 to-transparent">
            <span class="text-[10px] uppercase tracking-widest text-accent-brown">Commercial</span>
            <h3 class="text-xl font-bold uppercase mt-1">Healthcare Clinic</h3>
          </div>
        </div>
        <div class="project-card relative group overflow-hidden h-[400px]">
          <img alt="Educational Facility" class="w-full h-full object-cover transition-transform duration-700" src="/images/projects/p083_img01_xref6507.jpeg" />
          <div class="absolute inset-0 bg-black/20 group-hover:bg-black/40 transition-colors"></div>
          <div class="absolute bottom-0 left-0 w-full p-6 text-white z-20 bg-gradient-to-t from-black/80 to-transparent">
            <span class="text-[10px] uppercase tracking-widest text-accent-brown">Commercial</span>
            <h3 class="text-xl font-bold uppercase mt-1">Training Center</h3>
          </div>
        </div>
      </div>

    </div>
  </section>
</Layout>

<style>
  .project-card:hover img {
    transform: scale(1.05);
  }
</style>
