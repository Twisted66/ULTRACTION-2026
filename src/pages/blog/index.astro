---
// Blog index page - ULTRACTION General Contracting LLC
// News and insights listing

import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import SectionBackground from '../../components/common/SectionBackground.tsx';

// Get all blog posts
const allPosts = await getCollection('blog');
// Sort by date, newest first
const posts = allPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 9); // Show latest 9 posts

// SEO Metadata
const title = "News & Insights - ULTRACTION GENERAL CONTRACTING LLC";
const description = "Stay updated with the latest construction industry news, project updates, and insights from ULTRACTION General Contracting LLC in the UAE.";
---

<Layout
  title={title}
  description={description}
  image="/logo/UGC-HEADER.png"
>
  <!-- Page Header -->
  <SectionBackground client:visible contentWrapperClassName="p-8 lg:p-16">
    <h1 class="text-5xl lg:text-6xl font-bold uppercase tracking-tight font-heading mb-4">
      News & Insights
    </h1>
    <p class="text-lg max-w-3xl opacity-80">
      Latest construction industry updates, project news, and expert insights from our team.
    </p>
  </SectionBackground>

  <!-- Featured Post -->
  {posts.length > 0 && (
    <SectionBackground client:visible contentWrapperClassName="flex flex-col lg:flex-row">
      <div class="w-full lg:w-2/3 p-8 lg:p-12">
        <span class="inline-block px-3 py-1 border border-accent/30 text-accent text-[10px] uppercase tracking-[0.2em] mb-4">
          Featured
        </span>
        <h2 class="text-3xl lg:text-4xl font-bold uppercase mb-4 font-heading">
          {posts[0].data.title}
        </h2>
        <p class="text-base opacity-80 mb-6 line-clamp-3">
          {posts[0].data.description}
        </p>
        <div class="flex items-center gap-4 text-xs opacity-60 mb-6">
          <span>{posts[0].data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
          <span>•</span>
          <span>{posts[0].data.author}</span>
        </div>
        <a
          href={`/blog/${posts[0].slug}`}
          class="inline-block border border-primary dark:border-black/30 hover:bg-primary hover:text-background dark:hover:text-white px-6 py-3 text-xs font-medium uppercase tracking-wide transition-colors"
        >
          Read More
        </a>
      </div>
        <div class="w-full lg:w-1/3 h-[300px] lg:h-auto relative overflow-hidden">
          <div class="w-full h-full bg-gradient-to-br from-accent/20 to-primary/20 flex items-center justify-center">
            <svg class="w-16 h-16 text-primary/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
          </div>
        </div>
    </SectionBackground>
  )}

  <!-- Posts Grid -->
  <section>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
      {posts.slice(1).map((post) => (
        <article class="border-b md:border-b-0 lg:border-r border-primary/20 dark:border-black/20 p-8 lg:p-12">
          <div class="flex items-center gap-4 text-xs opacity-60 mb-4">
            <time datetime={post.data.pubDate.toISOString()}>
              {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
            </time>
            <span>•</span>
            <span>{post.data.author}</span>
          </div>
          <h3 class="text-xl font-bold uppercase mb-3 font-heading line-clamp-2">
            {post.data.title}
          </h3>
          <p class="text-sm opacity-80 mb-6 line-clamp-3">
            {post.data.description}
          </p>
          <a
            href={`/blog/${post.slug}`}
            class="inline-block text-xs font-bold uppercase tracking-widest text-accent hover:opacity-80 transition-opacity"
          >
            Read Article →
          </a>
        </article>
      ))}
    </div>
  </section>

  <!-- Categories Section -->
  <SectionBackground client:visible showBottomBorder={false} contentWrapperClassName="p-8 lg:p-16">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-xs font-bold uppercase tracking-widest mb-8 opacity-60 text-center">Explore by Category</h2>
      <div class="flex flex-wrap justify-center gap-4">
        {['Industry News', 'Project Updates', 'Construction Tips', 'Company News', 'Sustainability'].map((category) => (
          <a
            href="#"
            class="px-6 py-3 border border-primary/20 dark:border-black/20 hover:bg-primary hover:text-background dark:hover:text-white text-xs font-medium uppercase tracking-wide transition-colors"
          >
            {category}
          </a>
        ))}
      </div>
    </div>
  </SectionBackground>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
