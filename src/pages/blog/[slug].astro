---
// Blog post detail page - ULTRACTION General CONTRACTING LLC
// Individual blog post view

import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Pre-render this page as static HTML at build time
export const prerender = true;

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// SEO Metadata
const title = `${post.data.title} - ULTRACTION GENERAL CONTRACTING LLC`;
const description = post.data.description;
---

<Layout
  title={title}
  description={description}
  image={post.data.image || '/logo/UGC-HEADER.png'}
>
  <!-- Article Header -->
  <article class="border-b border-primary/20 dark:border-white/20">
    <div class="max-w-4xl mx-auto px-8 lg:px-6 py-12 lg:py-20">
      <!-- Category & Date -->
      <div class="flex items-center gap-4 text-xs opacity-60 mb-6">
        <span class="text-accent font-bold uppercase tracking-widest">{post.data.category}</span>
        <span>•</span>
        <time datetime={post.data.pubDate.toISOString()}>
          {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
        </time>
        <span>•</span>
        <span>{post.data.author}</span>
      </div>

      <!-- Title -->
      <h1 class="text-4xl lg:text-5xl font-bold uppercase tracking-tight font-heading mb-8">
        {post.data.title}
      </h1>

      <!-- Description -->
      <p class="text-xl opacity-80 leading-relaxed mb-8">
        {post.data.description}
      </p>

      <!-- Share Links -->
      <div class="flex items-center gap-4 pt-8 border-t border-primary/20 dark:border-white/20">
        <span class="text-xs font-bold uppercase tracking-widest opacity-60">Share:</span>
        <a
          href="#"
          class="w-8 h-8 flex items-center justify-center border border-primary/20 dark:border-white/20 hover:bg-accent hover:border-accent transition-colors"
          aria-label="Share on Twitter"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a
          href="#"
          class="w-8 h-8 flex items-center justify-center border border-primary/20 dark:border-white/20 hover:bg-accent hover:border-accent transition-colors"
          aria-label="Share on LinkedIn"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
        <a
          href="#"
          class="w-8 h-8 flex items-center justify-center border border-primary/20 dark:border-white/20 hover:bg-accent hover:border-accent transition-colors"
          aria-label="Share via Email"
        >
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </a>
      </div>
    </div>
  </article>

  <!-- Article Content -->
  <article class="border-b border-primary/20 dark:border-white/20">
    <div class="max-w-4xl mx-auto px-8 lg:px-6 py-12 lg:py-20">
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>
    </div>
  </article>

  <!-- Author Bio -->
  <section class="border-b border-primary/20 dark:border-white/20">
    <div class="max-w-4xl mx-auto px-8 lg:px-6 py-12 lg:py-16">
      <div class="flex flex-col md:flex-row gap-6 items-start">
        <div class="w-20 h-20 bg-gradient-to-br from-accent/20 to-primary/20 rounded-full flex items-center justify-center flex-shrink-0">
          <svg class="w-10 h-10 text-primary/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </div>
        <div>
          <h3 class="text-sm font-bold uppercase tracking-widest mb-2 opacity-60">Written by</h3>
          <h4 class="text-xl font-bold uppercase font-heading mb-2">{post.data.author}</h4>
          <p class="text-sm opacity-80 leading-relaxed">
            Expert construction professional sharing insights and industry knowledge from years of experience in the UAE construction sector.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Posts -->
  <section class="p-8 lg:p-16">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-xs font-bold uppercase tracking-widest mb-8 opacity-60">Related Articles</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <a href="/blog" class="border border-primary/20 dark:border-white/20 hover:bg-primary/5 dark:hover:bg-white/5 p-6 transition-colors">
          <h3 class="text-sm font-bold uppercase mb-2 font-heading">View All Articles</h3>
          <p class="text-xs opacity-80">Browse our complete collection of news and insights.</p>
        </a>
        <a href="/contact" class="border border-primary/20 dark:border-white/20 hover:bg-primary/5 dark:hover:bg-white/5 p-6 transition-colors">
          <h3 class="text-sm font-bold uppercase mb-2 font-heading">Get in Touch</h3>
          <p class="text-xs opacity-80">Have questions? Contact our team today.</p>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Prose styles for article content */
  .prose {
    color: hsl(var(--foreground));
    max-width: 65ch;
  }

  .prose h2 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-family: var(--font-heading);
  }

  .prose h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-family: var(--font-heading);
  }

  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }

  .prose ul,
  .prose ol {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose a {
    color: hsl(var(--color-accent));
    text-decoration: underline;
  }

  .prose a:hover {
    opacity: 0.8;
  }

  .prose blockquote {
    border-left: 4px solid hsl(var(--color-accent));
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    opacity: 0.8;
  }

  .prose code {
    background: hsl(var(--color-primary) / 0.1);
    padding: 0.2rem 0.4rem;
    border-radius: 2px;
    font-size: 0.875em;
  }

  .prose pre {
    background: hsl(var(--color-primary) / 0.1);
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .prose img {
    border-radius: var(--radius);
    margin: 2rem 0;
    width: 100%;
  }
</style>
