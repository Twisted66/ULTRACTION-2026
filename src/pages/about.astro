---
import Layout from '../layouts/Layout.astro';
import LogoLoop from '../components/common/LogoLoop.astro';
import CoreValues from '../components/about/CoreValues.astro';
import HowWeDeliver from '../components/about/HowWeDeliver';
import ClientPartners from '../components/about/ClientPartners';
import MissionVision from '../components/about/MissionVision';

const title = 'About Us | ULTRACTION';
const description = 'ULTRACTION General Contracting LLC delivers civil construction, concrete structures, and infrastructure projects across the UAE with a focus on safety, quality, and sustainability.';

const capabilityStages = [
  {
    label: 'Stage 01',
    heading: 'Civil and Concrete Foundation',
    body: 'Built on expertise in civil construction and concrete structure works, we execute every package with precision, reliability, and long-term performance in mind.',
  },
  {
    label: 'Stage 02',
    heading: 'Value-Engineered Delivery',
    body: 'Our teams integrate value engineering across planning and execution to optimize constructability, cost-efficiency, and schedule performance.',
  },
  {
    label: 'Stage 03',
    heading: 'Safety and Sustainability by Design',
    body: 'From method statements to handover, we prioritize jobsite safety, environmental responsibility, and resilient outcomes for communities.',
  },
  {
    label: 'Stage 04',
    heading: 'Trusted Regional Partnerships',
    body: 'We continue to grow through repeat delivery, transparent collaboration, and strong partnerships with major contractors, developers, and consultants.',
  },
];
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="flex flex-col lg:grid lg:grid-cols-2 border-y border-black min-h-[75vh] lg:min-h-[85vh] bg-surface">
    <div class="lg:col-span-1 flex flex-col justify-start px-6 py-16 md:px-12 lg:p-24 border-r border-black relative h-full">
      <span class="text-xs uppercase tracking-[0.2em] text-black/60 mb-6 block">Company Profile</span>
      <h1 class="text-4xl sm:text-5xl lg:text-7xl font-light font-heading leading-tight mb-8">
        Building <br/> <span class="italic font-bold text-black">Infrastructure</span> <br/> With Purpose
      </h1>
      <div class="w-12 h-[1px] bg-black/20 mb-8"></div>
      <p class="text-base font-light leading-loose opacity-80 max-w-md text-black">
        ULTRACTION General Contracting LLC is a leader in civil construction and concrete structure works. We combine skilled engineering teams, hands-on execution, and value engineering to deliver safe, efficient, and high-performance outcomes across the UAE.
      </p>
    </div>

    <div class="lg:col-span-1 relative overflow-hidden h-[320px] sm:h-[420px] lg:h-full bg-surface">
      <img
        src="/images/projects/naseem-albar-bridge/hero.png"
        alt="ULTRACTION infrastructure project"
        class="absolute inset-0 w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 pointer-events-none bg-gradient-to-r from-black/20 via-transparent to-transparent"></div>
    </div>
  </section>

  <!-- Enhanced "How We Deliver" Section -->
  <HowWeDeliver client:visible />

  <!-- Client Partners -->
  <ClientPartners client:visible />

  <!-- Enhanced Mission & Vision Section -->
  <MissionVision client:visible />

  <!-- Enhanced Core Values Section -->
  <CoreValues />

  <!-- Final CTA Section -->
  <section class="relative bg-surface text-primary overflow-hidden border-y border-primary/20">
    <div class="absolute inset-0 pointer-events-none">
      <div
        class="absolute inset-0 opacity-[0.03]"
        style={{
          backgroundImage: `
            linear-gradient(to right, currentColor 1px, transparent 1px),
            linear-gradient(to bottom, currentColor 1px, transparent 1px)
          `,
          backgroundSize: '60px 60px'
        }}
      />
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-accent/5 rounded-full blur-3xl animate-pulse-slow" />
    </div>

    <div class="relative z-10 px-6 md:px-12 lg:px-24 py-20 md:py-28 lg:py-32">
      <div class="flex flex-col items-center justify-center text-center max-w-4xl mx-auto">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-12 h-[2px] bg-accent"></div>
          <span class="text-xs font-bold uppercase tracking-[0.3em] text-accent">
            Work With Us
          </span>
          <div class="w-12 h-[2px] bg-accent"></div>
        </div>

        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold font-heading leading-[0.95] tracking-tight mb-8 max-w-3xl">
          Build your next project with a team focused on
          <br />
          <span class="italic font-light text-primary/50 scale-y-75 inline-block">
            safety, precision, and dependable delivery.
          </span>
        </h2>

        <a
          class="group relative inline-flex items-center gap-3 px-10 py-5 bg-primary text-white overflow-hidden transition-all duration-300 hover:bg-accent hover:shadow-xl hover:shadow-accent/20"
          href="/contact"
        >
          <span class="relative z-10 text-xs font-bold uppercase tracking-[0.2em]">
            Connect Today
          </span>
          <svg
            class="relative z-10 w-4 h-4 transition-transform duration-300 group-hover:translate-x-1"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M14 5l7 7m0 0l-7 7m7-7H3"
              strokeLinecap="round"
              strokeLinejoin="round"
              strokeWidth={2}
            />
          </svg>
        </a>
      </div>
    </div>

    <div class="absolute bottom-0 left-0 w-full h-[2px] bg-gradient-to-r from-transparent via-accent to-transparent"></div>
  </section>
</Layout>

<style>
  /* Animation for CTA button */
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(1.1); }
  }

  .animate-pulse-slow {
    animation: pulse-slow 8s ease-in-out infinite;
  }
</style>
