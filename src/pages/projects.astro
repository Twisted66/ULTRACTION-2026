<script>
  // Carousel/Filter functionality
  const filterBtns = document.querySelectorAll('.filter-btn') as NodeListOf<HTMLElement>;
  const projectCards = document.querySelectorAll('.project-card') as NodeListOf<HTMLElement>;

  filterBtns.forEach((btn: HTMLElement) => {
    btn.addEventListener('click', () => {
      const filter = btn.dataset.filter;

      // Update active states on buttons
      filterBtns.forEach((b: HTMLElement) => {
        b.classList.remove('active', 'bg-primary', 'text-white');
        b.classList.add('bg-[#DDD4C5]', 'dark:bg-[#2A2621]', 'text-primary', 'dark:text-white');
      });

      // Set clicked button as active
      btn.classList.add('active', 'bg-primary', 'text-white');
      btn.classList.remove('bg-[#DDD4C5]', 'dark:bg-[#2A2621]', 'text-primary', 'dark:text-white');

      // Filter project cards
      projectCards.forEach((card: HTMLElement) => {
        const category = card.dataset.category;
        if (filter === 'all' || category === filter) {
          (card as HTMLElement).style.display = '';
          (card as HTMLElement).style.opacity = '1';
        } else {
          (card as HTMLElement).style.display = 'none';
          (card as HTMLElement).style.opacity = '0';
        }
      });
    });
  });
</script>

